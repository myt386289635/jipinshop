<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/color_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginRight="@dimen/x28"
        android:textColor="@color/color_DE151515"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/x48"
        android:layout_centerHorizontal="true"
        tools:text="“极品城”想要打开“微信”"
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:id="@+id/dialog_sure"
        android:layout_marginBottom="@dimen/x24"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginTop="@dimen/x76"
        android:layout_below="@id/dialog_title"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:textColor="@color/color_4A90E2"
        android:text="打开"
        android:padding="@dimen/x10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toLeftOf="@id/dialog_sure"
        android:id="@+id/dialog_cancle"
        android:layout_marginBottom="@dimen/x24"
        android:layout_marginRight="@dimen/x46"
        android:layout_marginTop="@dimen/x76"
        android:layout_below="@id/dialog_title"
        android:textSize="16sp"
        android:textColor="@color/color_DE151515"
        android:text="取消"
        android:padding="@dimen/x10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>