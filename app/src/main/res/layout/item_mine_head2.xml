<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/bg_dc3f1b"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:id="@+id/mine_memberContainer"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginTop="@dimen/y25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y66">

            <TextView
                android:drawablePadding="@dimen/x18"
                android:drawableLeft="@mipmap/detail_member"
                android:layout_marginLeft="@dimen/x15"
                android:id="@+id/detail_memberText"
                android:layout_centerVertical="true"
                android:text="升级VIP享更多权益"
                android:textColor="@color/color_F7D6AB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mine_member"
                android:layout_marginRight="@dimen/x20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/y5"
                android:paddingTop="@dimen/y5"
                android:paddingRight="@dimen/x12"
                android:paddingLeft="@dimen/x12"
                android:background="@drawable/bg_f4cb95"
                android:textColor="@color/color_DC3F1B"
                android:textSize="12sp"
                android:text="立即升级>"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/y20"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:id="@+id/mine_headbootomContainer"
            android:layout_below="@+id/mine_memberContainer"
            android:background="@drawable/bg_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="@dimen/y18"
                android:layout_marginTop="@dimen/y18"
                android:layout_marginLeft="@dimen/x22"
                android:textColor="@color/color_9D9D9D"
                android:textSize="13sp"
                android:text="会员详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/color_DEDEDE"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/mine_withdraw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y22"
                        android:src="@mipmap/mine_reward"/>

                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y10"
                        android:text="提现"
                        android:textColor="@color/color_202020"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_team"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y22"
                        android:src="@mipmap/mine_trial"/>

                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y10"
                        android:text="我的团队"
                        android:textColor="@color/color_202020"/>

                    <TextView
                        android:id="@+id/mine_teamCount"
                        android:layout_marginTop="@dimen/y3"
                        android:layout_marginBottom="@dimen/y16"
                        android:textColor="@color/color_ACACAC"
                        android:textSize="11sp"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_order"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y22"
                        android:src="@mipmap/order"/>

                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y10"
                        android:text="我的订单"
                        android:textColor="@color/color_202020"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_invitation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y22"
                        android:src="@mipmap/mine_shopping"/>

                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y10"
                        android:text="邀请好友"
                        android:textColor="@color/color_202020"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.example.administrator.jipinshop.view.viewpager.TouchViewPager
            android:id="@+id/view_pager"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y188"
            android:layout_below="@+id/mine_headbootomContainer"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginRight="@dimen/x30"/>

    </RelativeLayout>
</layout>
