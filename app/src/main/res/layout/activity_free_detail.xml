<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="date"
            type="com.example.administrator.jipinshop.bean.FreeDetailBean.DataBean"/>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_above="@+id/detail_bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                app:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/title_container"
                    android:background="@color/color_white"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/status_bar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:orientation="vertical"/>

                    <RelativeLayout
                        android:id="@+id/detail_pagerContainer"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y750">

                        <android.support.v4.view.ViewPager
                            android:visibility="@{date.imgList.size() == 1 ? View.GONE : View.VISIBLE}"
                            android:id="@+id/view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:visibility="@{date.imgList.size() == 1 ? View.GONE : View.VISIBLE}"
                            android:id="@+id/detail_point"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view_pager"
                            android:layout_marginTop="-18dp"
                            android:gravity="center"
                            android:orientation="horizontal"/>

                        <ImageView
                            bind:src="@{date.img}"
                            android:id="@+id/pager_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:visibility="@{date.imgList.size() == 1 ? View.VISIBLE : View.GONE}"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:onClick="@{listener.onClick}"
                        android:layout_marginBottom="@dimen/y18"
                        android:layout_marginTop="@dimen/y18"
                        android:layout_below="@+id/status_bar1"
                        android:id="@+id/title_back"
                        android:background="@drawable/bg_back"
                        android:layout_marginLeft="@dimen/x28"
                        android:layout_width="@dimen/x56"
                        android:layout_height="@dimen/y56">

                        <ImageView
                            android:padding="@dimen/x12"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/balance_white"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:onClick="@{listener.onClick}"
                        android:layout_marginBottom="@dimen/y18"
                        android:layout_marginTop="@dimen/y18"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/status_bar1"
                        android:id="@+id/title_favor"
                        android:background="@drawable/bg_back"
                        android:layout_marginRight="@dimen/x28"
                        android:layout_width="@dimen/x56"
                        android:layout_height="@dimen/y56">

                        <ImageView
                            android:id="@+id/title_favorImg"
                            android:padding="@dimen/x12"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/nav_share_white"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="@{date.status == 0 ? View.VISIBLE : View.GONE}"
                        android:layout_below="@+id/detail_pagerContainer"
                        android:background="@color/color_E31B3C"
                        android:id="@+id/detail_countdownContainer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80">

                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/color_white"
                            android:layout_marginLeft="@dimen/x28"
                            android:id="@+id/detail_countdown"
                            android:layout_centerVertical="true"
                            android:text="开抢倒计时：0天0小时0分钟0秒"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:id="@+id/detail_count"
                            android:layout_marginRight="@dimen/x28"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="@{@string/free_count1 + date.count + @string/free_count2}"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="@color/color_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="@{date.status == 1 &amp;&amp; (date.applyStatus == 0 || date.applyStatus == 1)? View.VISIBLE : View.GONE}"
                        android:id="@+id/detail_buyContainer"
                        android:layout_below="@+id/detail_countdownContainer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y110">

                        <RelativeLayout
                            android:visibility="@{date.applyStatus == 1 ? View.GONE : View.VISIBLE}"
                            android:id="@+id/detail_buyTimeContainer"
                            android:layout_alignParentRight="true"
                            android:background="@color/color_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_marginRight="@dimen/x50"
                                android:layout_marginLeft="@dimen/x66"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textSize="13sp"
                                    android:textColor="@color/color_white"
                                    android:text="距离结束购买时间"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/detail_buyTime"
                                    android:text="仅剩：0分0秒"
                                    android:textSize="13sp"
                                    android:textColor="@color/color_white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>



                        </RelativeLayout>

                        <RelativeLayout
                            android:background="@color/color_E31B3C"
                            android:layout_toLeftOf="@+id/detail_buyTimeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_marginLeft="@dimen/x32"
                                android:layout_centerVertical="true"
                                android:textColor="@color/color_white"
                                android:id="@+id/detail_buyPrice"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                bind:actualPrice="@{date.actualPrice}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.example.administrator.jipinshop.view.textview.TextViewDel
                                android:id="@+id/detail_buyOtherPrice"
                                android:layout_marginBottom="@dimen/y14"
                                android:layout_alignBottom="@id/detail_buyPrice"
                                android:textColor="@color/color_white"
                                android:textSize="13sp"
                                android:text="@{@string/price + date.otherPrice}"
                                android:layout_marginLeft="@dimen/x20"
                                android:layout_toRightOf="@id/detail_buyPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_marginBottom="@dimen/y44"
                        android:textColor="@color/color_DE151515"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/detail_buyContainer"
                        android:layout_marginTop="@dimen/y36"
                        android:layout_marginRight="@dimen/x28"
                        android:layout_marginLeft="@dimen/x28"
                        android:text="@{date.name}"
                        android:id="@+id/detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:layout_marginBottom="@dimen/y44"
                        android:visibility="@{date.status == 0 || (date.status == 1 &amp;&amp; date.applyStatus == 0) ? View.GONE : View.VISIBLE}"
                        android:id="@+id/item_progressbarContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_name">

                        <com.example.administrator.jipinshop.view.SaleProgressView
                            android:id="@+id/item_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y16"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginRight="@dimen/x40"
                            app:endColor="@color/color_E31B3C"
                            app:nearOverText=""
                            app:overText=""
                            app:sideColor="@color/color_D8D8D8"
                            app:startColor="@color/color_E31B3C"
                            app:isNeedAnim="false"/>

                        <TextView
                            bind:userCount="@{date.userCount}"
                            android:id="@+id/item_saledNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/item_progressbar"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginTop="@dimen/y16"
                            android:textColor="@color/color_ACACAC"
                            android:textSize="13sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/item_totalNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/item_progressbar"
                            android:layout_below="@+id/item_progressbar"
                            android:layout_marginTop="@dimen/y16"
                            android:text="@{@string/free_count1 + date.count + @string/free_count2}"
                            android:textColor="@color/color_ACACAC"
                            android:textSize="13sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <TextView
                        android:visibility="@{date.status == 1 &amp;&amp; (date.applyStatus == 0 || date.applyStatus == 1) ? View.GONE : View.VISIBLE}"
                        android:layout_marginLeft="@dimen/x28"
                        android:layout_below="@id/item_progressbarContainer"
                        android:id="@+id/detail_coins"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_E31B3C"
                        android:text="@{date.point + @string/priceEnd}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.example.administrator.jipinshop.view.textview.TextViewDel
                        android:visibility="@{date.status == 1 &amp;&amp; (date.applyStatus == 0 || date.applyStatus == 1) ? View.GONE : View.VISIBLE}"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_toRightOf="@id/detail_coins"
                        android:layout_alignBottom="@id/detail_coins"
                        android:layout_alignTop="@id/detail_coins"
                        android:id="@+id/item_price"
                        android:textStyle="bold"
                        android:textColor="@color/color_ACACAC"
                        android:textSize="13sp"
                        android:text="@{@string/price + date.actualPrice}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.example.administrator.jipinshop.view.textview.TextViewDel
                        android:visibility="@{date.status == 1 &amp;&amp; (date.applyStatus == 0 || date.applyStatus == 1) ? View.GONE : View.VISIBLE}"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/x20"
                        android:textStyle="bold"
                        android:textColor="@color/color_ACACAC"
                        android:textSize="13sp"
                        android:layout_toRightOf="@id/item_price"
                        android:layout_alignBottom="@id/detail_coins"
                        android:layout_alignTop="@id/detail_coins"
                        android:id="@+id/item_otherPrice"
                        android:text="@{@string/price + date.otherPrice}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:visibility="@{date.status == 0 ? View.VISIBLE : View.GONE}"
                        android:layout_marginLeft="@dimen/x28"
                        android:layout_marginTop="@dimen/y26"
                        android:layout_below="@id/detail_coins"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_333333"
                        android:id="@+id/detail_startTime"
                        android:text="@{date.activitiesStartTime + @string/free_startTime}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:visibility="@{date.status == 1 &amp;&amp; (date.applyStatus == 0 || date.applyStatus == 1) ? View.GONE : View.VISIBLE }"
                        android:layout_marginTop="@dimen/y36"
                        android:text="@{date.freeNote}"
                        android:layout_below="@id/detail_startTime"
                        android:id="@+id/detail_node"
                        android:paddingBottom="@dimen/y16"
                        android:paddingTop="@dimen/y16"
                        android:paddingRight="@dimen/x28"
                        android:paddingLeft="@dimen/x28"
                        android:textColor="@color/color_E31B3C"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:background="@color/color_FFDBDB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_below="@id/detail_node"
                        android:background="@color/color_F5F5F5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y20"/>

                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:visibility="invisible"
                        android:id="@+id/status_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:orientation="vertical"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100">

                    <ImageView
                        android:onClick="@{listener.onClick}"
                        android:visibility="gone"
                        android:id="@+id/detail_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/x22"
                        android:src="@mipmap/nav_back"/>

                    <android.support.design.widget.TabLayout
                        android:layout_marginLeft="@dimen/x50"
                        android:layout_marginRight="@dimen/x50"
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

                <View
                    android:background="@color/color_F5F5F5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y2"/>

            </android.support.design.widget.AppBarLayout>

            <com.example.administrator.jipinshop.view.viewpager.NoScrollViewPager
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/detail_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.design.widget.CoordinatorLayout>


        <LinearLayout
            android:id="@+id/detail_bottomContainer"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:id="@+id/detail_bottomNote"
                android:visibility="gone"
                android:gravity="center"
                android:textSize="14sp"
                android:text="需全款购买，并确认收货按照抢到名额对应比例返现哦！"
                android:textColor="@color/color_888888"
                android:background="@color/color_E6F3FF"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y88"/>

            <View
                android:background="@color/color_F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"/>

            <LinearLayout
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y110">

                <TextView
                    android:gravity="center"
                    android:textColor="@color/color_DE151515"
                    android:textSize="18sp"
                    android:text="@{date.status == 2 ? @string/free_count4 + date.count + @string/free_count2 : @string/free_count3 + (date.count - date.userCount)  + @string/free_count2}"
                    android:id="@+id/detail_bottomCount"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:onClick="@{listener.onClick}"
                    android:gravity="center"
                    android:textSize="18sp"
                    bind:Freestatus="@{date.status}"
                    bind:applyStatus="@{date.applyStatus}"
                    android:textStyle="bold"
                    android:textColor="@color/color_DEFFFFFF"
                    android:background="@color/color_E31B3C"
                    android:id="@+id/detail_bottomBuy"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</layout>
