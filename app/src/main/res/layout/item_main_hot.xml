<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.example.administrator.jipinshop.bean.TbkIndexBean.DataBean.HotGoodsListBean"/>
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="@dimen/y18"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:scaleType="centerCrop"
            android:id="@+id/item_image"
            bind:src="@{data.img}"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y200"/>

        <TextView
            android:id="@+id/item_name"
            android:textColor="@color/color_202020"
            android:textSize="13sp"
            android:layout_marginTop="@dimen/y15"
            android:singleLine="true"
            android:layout_alignRight="@id/item_image"
            android:layout_alignLeft="@id/item_image"
            android:text="@{data.otherName}"
            android:layout_below="@id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/item_priceContainer"
            android:layout_alignRight="@id/item_image"
            android:layout_alignLeft="@id/item_image"
            android:layout_marginTop="@dimen/y12"
            android:layout_below="@id/item_name"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="@dimen/x4"
                android:drawableLeft="@mipmap/shop_v"
                android:textStyle="bold"
                android:textSize="11sp"
                android:textColor="@color/color_E25838"
                android:text="Â¥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_price"
                android:textStyle="bold"
                android:textColor="@color/color_E25838"
                android:text="@{data.buyPrice}"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.example.administrator.jipinshop.view.textview.TextViewDel
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@{@string/price + data.otherPrice}"
                android:layout_marginLeft="@dimen/x10"
                android:id="@+id/item_priceOld"
                android:textSize="13sp"
                android:textColor="@color/color_9D9D9D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y10"
            android:layout_below="@id/item_priceContainer"
            android:layout_alignRight="@id/item_image"
            android:layout_alignLeft="@id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:minHeight="@dimen/y26"
                android:gravity="center"
                android:id="@+id/detail_coupon"
                android:text="@{@string/coupon2 + data.couponPrice}"
                android:textSize="10sp"
                android:textColor="@color/color_E25838"
                android:background="@mipmap/home_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableLeft="@mipmap/item_v"
                android:layout_marginLeft="@dimen/x2"
                android:minHeight="@dimen/y26"
                android:id="@+id/detail_fee"
                android:paddingRight="@dimen/x12"
                android:paddingLeft="@dimen/x12"
                android:gravity="center"
                android:text="@{@string/fee2 + data.fee}"
                android:textColor="@color/color_AD7F35"
                android:textSize="10sp"
                android:background="@drawable/bg_ad7f35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/item_sort"
            android:layout_marginTop="@dimen/y4"
            android:layout_marginLeft="@dimen/x8"
            android:layout_alignLeft="@id/item_image"
            android:layout_alignTop="@id/item_image"
            android:src="@mipmap/home_sort1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>
