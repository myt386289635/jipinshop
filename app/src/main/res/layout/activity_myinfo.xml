<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">


        <include
            bind:listener="@{listener}"
            android:id="@+id/in_clude"
            layout="@layout/aa_title"/>

        <RelativeLayout
            android:onClick="@{listener.onClick}"
            android:id="@+id/info_imageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/info_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x28"
                android:background="@mipmap/right_ash1"/>

            <ImageView
                android:id="@+id/info_image"
                android:layout_width="@dimen/x84"
                android:layout_height="@dimen/x84"
                android:layout_marginBottom="@dimen/x24"
                android:layout_marginRight="@dimen/x26"
                android:layout_marginTop="@dimen/x24"
                android:layout_toLeftOf="@id/info_line"
                tools:src="#f56"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_below="@id/info_image"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x28"
                android:background="@color/color_F5F5F5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x28"
                android:text="头像"
                android:textColor="@color/color_DE151515"
                android:textSize="15sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:onClick="@{listener.onClick}"
            android:id="@+id/info_nameContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginTop="@dimen/x20"
                android:text="昵称"
                android:textColor="@color/color_DE151515"
                android:textSize="15sp"/>

            <TextView
                android:maxLength="20"
                android:id="@+id/info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x28"
                android:drawablePadding="@dimen/x10"
                android:drawableRight="@mipmap/right_ash1"
                android:text="游客"
                android:textColor="@color/color_ACACAC"
                android:textSize="13sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_below="@id/info_nameText"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x28"
                android:background="@color/color_F5F5F5"/>
        </RelativeLayout>

        <RelativeLayout
            android:onClick="@{listener.onClick}"
            android:id="@+id/info_sexContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_sexText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginTop="@dimen/x20"
                android:text="性别"
                android:textColor="@color/color_DE151515"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x28"
                android:drawablePadding="@dimen/x10"
                android:drawableRight="@mipmap/right_ash1"
                android:textColor="@color/color_ACACAC"
                android:textSize="13sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_below="@id/info_sexText"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x28"
                android:background="@color/color_F5F5F5"/>
        </RelativeLayout>

        <RelativeLayout
            android:onClick="@{listener.onClick}"
            android:id="@+id/info_birthContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_birthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginTop="@dimen/x20"
                android:text="生日"
                android:textColor="@color/color_DE151515"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/info_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x28"
                android:drawablePadding="@dimen/x10"
                android:drawableRight="@mipmap/right_ash1"
                android:text="2000-06-08"
                android:textColor="@color/color_ACACAC"
                android:textSize="13sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_below="@id/info_birthText"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x28"
                android:background="@color/color_F5F5F5"/>
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:onClick="@{listener.onClick}"
            android:id="@+id/info_numberContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_numberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginTop="@dimen/x20"
                android:text="账号管理"
                android:textColor="@color/color_DE151515"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/info_numberLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x28"
                android:background="@mipmap/right_ash1"/>


            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/info_numberWeiBo"
                android:src="@mipmap/weibo_nor"
                android:layout_marginRight="@dimen/x10"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/info_numberLine"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/y38"/>

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/info_numberWechat"
                android:src="@mipmap/wechat_nor"
                android:layout_marginRight="@dimen/x18"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/info_numberWeiBo"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/y38"/>

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/info_numberPhone"
                android:src="@mipmap/phone_nor"
                android:layout_marginRight="@dimen/x18"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/info_numberWechat"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/y38"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_below="@id/info_numberText"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x28"
                android:background="@color/color_F5F5F5"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:onClick="@{listener.onClick}"
                android:id="@+id/info_exitLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:layout_alignParentBottom="true"
                android:background="@color/color_E31436"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/color_white"
                android:textSize="15sp"/>

        </RelativeLayout>


    </LinearLayout>
</layout>
