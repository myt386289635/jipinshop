<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="date1"
            type="com.example.administrator.jipinshop.bean.PopBean.DataBean.AllowanceGoodsListBean"/>

        <variable
            name="date2"
            type="com.example.administrator.jipinshop.bean.PopBean.DataBean.AllowanceGoodsListBean"/>

        <variable
            name="date3"
            type="com.example.administrator.jipinshop.bean.PopBean.DataBean.AllowanceGoodsListBean"/>
    </data>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="@dimen/x560"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_f33a25"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_marginBottom="@dimen/y15"
                android:layout_marginTop="@dimen/y48"
                android:gravity="center"
                android:text="新人专享108元补贴大礼包"
                android:textColor="@color/color_FFEC44"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="下单立减，津贴当钱花"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y45"
                android:layout_marginBottom="@dimen/y50"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/x164"
                    android:layout_height="@dimen/y224">

                    <ImageView
                        android:id="@+id/dialog_img1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y164"
                        android:scaleType="centerCrop"
                        bind:srcTopRound="@{date1.img}"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/dialog_img1"
                        android:background="@drawable/bg_balance_last">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/dialog_cheap_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"
                                android:textColor="@color/color_FFEC44"
                                android:textSize="10sp"
                                android:text="减￥"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/dialog_text1"
                                android:textStyle="bold"
                                android:textSize="19sp"
                                android:text="@{date1.useAllowancePrice}"
                                android:textColor="@color/color_FFEC44"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="@{date2 == null ? View.GONE : View.VISIBLE}"
                    android:layout_width="@dimen/x164"
                    android:layout_height="@dimen/y224"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10">

                    <ImageView
                        android:id="@+id/dialog_img2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y164"
                        android:scaleType="centerCrop"
                        bind:srcTopRound="@{date2.img}"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/dialog_img2"
                        android:background="@drawable/bg_balance_last">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/dialog_cheap_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"
                                android:textColor="@color/color_FFEC44"
                                android:textSize="10sp"
                                android:text="减￥"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/dialog_text2"
                                android:textColor="@color/color_FFEC44"
                                android:textStyle="bold"
                                android:textSize="19sp"
                                android:text="@{date2.useAllowancePrice}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="@{date3 == null ? View.GONE : View.VISIBLE}"
                    android:layout_width="@dimen/x164"
                    android:layout_height="@dimen/y224">

                    <ImageView
                        android:id="@+id/dialog_img3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y164"
                        android:scaleType="centerCrop"
                        bind:srcTopRound="@{date3.img}"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/dialog_img3"
                        android:background="@drawable/bg_balance_last">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/dialog_cheap_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"
                                android:textColor="@color/color_FFEC44"
                                android:textSize="10sp"
                                android:text="减￥"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/dialog_text3"
                                android:textColor="@color/color_FFEC44"
                                android:textStyle="bold"
                                android:textSize="19sp"
                                android:text="@{date3.useAllowancePrice}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_marginBottom="@dimen/y44"
                android:adjustViewBounds="true"
                android:layout_marginRight="@dimen/x65"
                android:layout_marginLeft="@dimen/x65"
                android:src="@mipmap/dialog_cheap_more"
                android:id="@+id/dialog_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:layout_marginTop="@dimen/y100"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:id="@+id/dialog_cancle"
            android:src="@mipmap/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>
