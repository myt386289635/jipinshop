<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:minWidth="@dimen/x618"
            android:background="@mipmap/bg_cheap3"
            android:layout_width="@dimen/x618"
            android:layout_height="@dimen/y656">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_marginTop="@dimen/y57"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_F93931"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="再看看这些商品吧，都能用津贴"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dialog_title2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y2"
                android:textColor="@color/color_F93931"
                android:textSize="12sp"
                android:text="以下商品下单立减，津贴当钱花！"
                android:layout_below="@id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="@dimen/y34"
                android:layout_below="@id/dialog_title2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/x156"
                    android:layout_height="@dimen/y204">

                    <ImageView
                        android:id="@+id/dialog_img1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y156"
                        android:scaleType="centerCrop"
                        android:src="@color/color_F4EBDA"/>

                    <TextView
                        android:id="@+id/dialog_text1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/dialog_img1"
                        android:background="@drawable/bg_cheap_dialog"
                        android:gravity="center"
                        tools:text="减4.5元"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x156"
                    android:layout_height="@dimen/y204"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x5">

                    <ImageView
                        android:id="@+id/dialog_img2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y156"
                        android:scaleType="centerCrop"
                        android:src="@color/color_F4EBDA"/>

                    <TextView
                        android:id="@+id/dialog_text2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/dialog_img2"
                        android:background="@drawable/bg_cheap_dialog"
                        android:gravity="center"
                        tools:text="减4.5元"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x156"
                    android:layout_height="@dimen/y204">

                    <ImageView
                        android:id="@+id/dialog_img3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y156"
                        android:scaleType="centerCrop"
                        android:src="@color/color_F4EBDA"/>

                    <TextView
                        android:id="@+id/dialog_text3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/dialog_img3"
                        android:background="@drawable/bg_cheap_dialog"
                        android:gravity="center"
                        tools:text="减4.5元"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_bottomContainer"
                android:layout_marginBottom="@dimen/y30"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dialog_sure"
                    android:gravity="center"
                    android:background="@drawable/bg_fcce0a"
                    android:textColor="@color/color_FCCE0A"
                    android:textSize="16sp"
                    android:text="忍痛离开"
                    android:layout_width="@dimen/x222"
                    android:layout_height="@dimen/y66"/>

                <TextView
                    android:id="@+id/dialog_dismiss"
                    android:layout_marginLeft="@dimen/x80"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@mipmap/bg_cheap4"
                    android:textColor="@color/color_white"
                    android:textSize="16sp"
                    android:text="继续逛逛"
                    android:layout_width="@dimen/x222"
                    android:layout_height="@dimen/y66"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/y33"
                android:layout_above="@id/dialog_bottomContainer"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:text="还有"
                    android:textColor="@color/color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/dialog_money"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/color_white"
                    android:text="100元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/color_white"
                    android:text="津贴未使用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</layout>
