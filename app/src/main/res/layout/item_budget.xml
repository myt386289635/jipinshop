<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:src="@color/color_E31436"
        android:layout_marginRight="@dimen/x18"
        android:layout_marginBottom="@dimen/y24"
        android:layout_marginTop="@dimen/y24"
        android:layout_marginLeft="@dimen/x24"
        android:id="@+id/item_image"
        android:layout_width="@dimen/x190"
        android:layout_height="@dimen/y158"/>


    <TextView
        android:id="@+id/item_money"
        android:layout_marginRight="@dimen/x24"
        android:layout_marginTop="@dimen/y30"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:text="+¥0"
        android:textColor="@color/color_E31436"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/color_202020"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toLeftOf="@id/item_money"
        android:id="@+id/item_name"
        android:layout_marginRight="@dimen/x80"
        android:layout_marginTop="@dimen/y6"
        android:layout_alignTop="@id/item_image"
        android:layout_toRightOf="@id/item_image"
        android:text="便携式果蔬榨汁料理机便携式果蔬榨汁料理机便携式果蔬榨汁料理机"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:gravity="center"
        android:layout_alignBottom="@id/item_state"
        android:layout_alignTop="@id/item_name"
        android:id="@+id/item_time"
        android:layout_toRightOf="@id/item_image"
        android:textColor="@color/color_ACACAC"
        android:textSize="13sp"
        android:text="2018-08-22 16:38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_state"
        android:layout_marginBottom="@dimen/y8"
        android:layout_alignBottom="@id/item_image"
        android:textColor="@color/color_ACACAC"
        android:layout_toRightOf="@id/item_image"
        android:textSize="13sp"
        android:text="可提现"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>