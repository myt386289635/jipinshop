<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/item_image"
        tools:src="@color/color_E31436"
        android:layout_marginTop="@dimen/x48"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginLeft="@dimen/x28"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x446"/>

    <TextView
        android:layout_marginRight="@dimen/x28"
        android:lineSpacingExtra="@dimen/x3"
        android:id="@+id/item_name"
        android:layout_marginTop="@dimen/x32"
        android:layout_marginLeft="@dimen/x28"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/color_202020"
        android:text="酷暑将至，夏季避暑必备神器，让你度过最惬意的夏日！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginRight="@dimen/x28"
        android:textColor="@color/color_ACACAC"
        android:textSize="13sp"
        android:layout_marginTop="@dimen/x24"
        android:layout_marginLeft="@dimen/x28"
        android:text="一定有的你喜欢的高颜值产品，好东西值得拥有"
        android:id="@+id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_marginBottom="@dimen/x12"
        android:layout_marginTop="@dimen/x24"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginLeft="@dimen/x28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_time"
            android:textSize="13sp"
            android:textColor="@color/color_ACACAC"
            android:text="2018.8.6 16:38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/item_lookNum"
            android:textSize="13sp"
            android:textColor="@color/color_ACACAC"
            android:text="936"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="@dimen/x4"
            android:layout_toLeftOf="@+id/item_lookNum"
            android:layout_centerVertical="true"
            android:src="@mipmap/recommend_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/x22"
        android:background="@color/color_F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x12"/>
</LinearLayout>