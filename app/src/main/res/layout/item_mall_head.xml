<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="@dimen/y30"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x14"
            android:textColor="@color/pickerview_topbar_title"
            android:textSize="13sp"
            android:text="我的极币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_code"
            android:text="0"
            android:textStyle="bold"
            android:textColor="@color/pickerview_topbar_title"
            android:textSize="26sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
        android:layout_marginBottom="@dimen/y64"
        android:id="@+id/item_getCode"
        android:layout_marginTop="@dimen/y14"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/y8"
        android:paddingTop="@dimen/y8"
        android:paddingRight="@dimen/x30"
        android:paddingLeft="@dimen/x30"
        android:textStyle="bold"
        android:text="我要赚极币"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:background="@drawable/bg_tab_eva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginBottom="@dimen/y26"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_marginRight="@dimen/x18"
            android:background="@color/color_E25838"
            android:layout_width="@dimen/x128"
            android:layout_height="@dimen/y6"/>

        <TextView
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/color_E25838"
            android:text="积分兑换"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginLeft="@dimen/x18"
            android:background="@color/color_E25838"
            android:layout_width="@dimen/x128"
            android:layout_height="@dimen/y6"/>

    </LinearLayout>

</LinearLayout>