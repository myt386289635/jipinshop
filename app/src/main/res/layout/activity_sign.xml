<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

    </data>


    <LinearLayout
        android:background="@drawable/bg_sign"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80">

            <ImageView
                android:onClick="@{listener.onClick}"
                android:id="@+id/title_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/x22"
                android:src="@mipmap/balance_white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/color_DEFFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="极币中心"/>


            <TextView
                android:onClick="@{listener.onClick}"
                android:id="@+id/sign_rule"
                android:layout_marginRight="@dimen/x28"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_DEFFFFFF"
                android:textSize="15sp"
                android:text="规则说明"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <ScrollView
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/sign_totleContainer"
                    android:layout_marginTop="@dimen/y66"
                    android:layout_marginLeft="@dimen/x132"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_DEFFFFFF"
                        android:text="总极币"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/sign_totle"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/color_DEFFFFFF"
                        android:textStyle="bold"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/y66"
                    android:layout_marginRight="@dimen/x132"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_DEFFFFFF"
                        android:text="今日极币 "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/sign_dayNum"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/color_DEFFFFFF"
                        android:textStyle="bold"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:layout_below="@id/sign_totleContainer"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/x56"
                    android:layout_marginLeft="@dimen/x56"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y114"
                    android:src="@mipmap/sign_bg2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y296"/>

                <RelativeLayout
                    android:layout_marginBottom="@dimen/y60"
                    android:paddingBottom="@dimen/y60"
                    android:layout_marginTop="@dimen/y354"
                    android:layout_alignTop="@+id/sign_bg1"
                    android:layout_marginRight="@dimen/x28"
                    android:layout_marginLeft="@dimen/x28"
                    android:background="@drawable/bg_sign3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_marginTop="@dimen/y90"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/color_8F8F8F"
                        android:textSize="15sp"
                        android:id="@+id/sign_title"
                        android:text="已连续签到"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:id="@+id/sign_calendar"
                        android:layout_marginTop="@dimen/y30"
                        android:scaleType="fitXY"
                        android:layout_marginRight="@dimen/x66"
                        android:layout_marginLeft="@dimen/x66"
                        android:layout_below="@id/sign_title"
                        android:src="@mipmap/sign_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y288"/>

                    <LinearLayout
                        android:layout_marginTop="@dimen/y124"
                        android:layout_alignTop="@+id/sign_calendar"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/color_DEFF533A"
                            android:textSize="24sp"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginLeft="@dimen/x6"
                            android:textStyle="bold"
                            android:textColor="@color/color_FF533A"
                            android:textSize="13sp"
                            android:text="天"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/sign_container"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/y10"
                        android:layout_below="@id/sign_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/sign_oneImg"
                                android:src="@mipmap/signin_nor"
                                android:layout_width="@dimen/x60"
                                android:layout_height="@dimen/y60"
                                android:scaleType="fitXY"/>

                            <TextView
                                android:textColor="@color/color_8F8F8F"
                                android:gravity="center"
                                android:layout_alignRight="@+id/sign_oneImg"
                                android:layout_alignLeft="@+id/sign_oneImg"
                                android:layout_below="@+id/sign_oneImg"
                                android:text="1天"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/sign_oneLine"
                                android:layout_marginLeft="@dimen/x2"
                                android:layout_marginTop="@dimen/y28"
                                android:layout_toRightOf="@+id/sign_oneImg"
                                android:background="@color/color_ECECEC"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y2"/>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/sign_twoImg"
                                android:src="@mipmap/signin_nor"
                                android:layout_width="@dimen/x60"
                                android:layout_height="@dimen/y60"
                                android:scaleType="fitXY"/>

                            <TextView
                                android:textColor="@color/color_8F8F8F"
                                android:gravity="center"
                                android:layout_alignRight="@+id/sign_twoImg"
                                android:layout_alignLeft="@+id/sign_twoImg"
                                android:layout_below="@+id/sign_twoImg"
                                android:text="2天"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/sign_twoLine"
                                android:layout_marginLeft="@dimen/x2"
                                android:layout_marginTop="@dimen/y28"
                                android:layout_toRightOf="@+id/sign_twoImg"
                                android:background="@color/color_ECECEC"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y2"/>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/sign_threeImg"
                                android:src="@mipmap/signin_nor"
                                android:layout_width="@dimen/x60"
                                android:layout_height="@dimen/y60"
                                android:scaleType="fitXY"/>

                            <TextView
                                android:textColor="@color/color_8F8F8F"
                                android:gravity="center"
                                android:layout_alignRight="@+id/sign_threeImg"
                                android:layout_alignLeft="@+id/sign_threeImg"
                                android:layout_below="@+id/sign_threeImg"
                                android:text="3天"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/sign_threeLine"
                                android:layout_marginLeft="@dimen/x2"
                                android:layout_marginTop="@dimen/y28"
                                android:layout_toRightOf="@+id/sign_threeImg"
                                android:background="@color/color_ECECEC"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y2"/>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/sign_foreImg"
                                android:src="@mipmap/signin_nor"
                                android:layout_width="@dimen/x60"
                                android:layout_height="@dimen/y60"
                                android:scaleType="fitXY"/>

                            <TextView
                                android:textColor="@color/color_8F8F8F"
                                android:gravity="center"
                                android:layout_alignRight="@+id/sign_foreImg"
                                android:layout_alignLeft="@+id/sign_foreImg"
                                android:layout_below="@+id/sign_foreImg"
                                android:text="4天"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/sign_foreLine"
                                android:layout_marginLeft="@dimen/x2"
                                android:layout_marginTop="@dimen/y28"
                                android:layout_toRightOf="@+id/sign_foreImg"
                                android:background="@color/color_ECECEC"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y2"/>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/sign_fiveImg"
                                android:src="@mipmap/signin_nor"
                                android:layout_width="@dimen/x60"
                                android:layout_height="@dimen/y60"
                                android:scaleType="fitXY"/>

                            <TextView
                                android:textColor="@color/color_8F8F8F"
                                android:gravity="center"
                                android:layout_alignRight="@+id/sign_fiveImg"
                                android:layout_alignLeft="@+id/sign_fiveImg"
                                android:layout_below="@+id/sign_fiveImg"
                                android:text="5天"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/sign_fiveLine"
                                android:layout_marginLeft="@dimen/x2"
                                android:layout_marginTop="@dimen/y28"
                                android:layout_toRightOf="@+id/sign_fiveImg"
                                android:background="@color/color_ECECEC"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y2"/>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/sign_sixImg"
                                android:src="@mipmap/signin_nor"
                                android:layout_width="@dimen/x60"
                                android:layout_height="@dimen/y60"
                                android:scaleType="fitXY"/>

                            <TextView
                                android:textColor="@color/color_8F8F8F"
                                android:gravity="center"
                                android:layout_alignRight="@+id/sign_sixImg"
                                android:layout_alignLeft="@+id/sign_sixImg"
                                android:layout_below="@+id/sign_sixImg"
                                android:text="6天"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/sign_sixLine"
                                android:layout_marginLeft="@dimen/x2"
                                android:layout_marginTop="@dimen/y28"
                                android:layout_toRightOf="@+id/sign_sixImg"
                                android:background="@color/color_ECECEC"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y2"/>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/sign_sunImg"
                                android:src="@mipmap/signin_nor"
                                android:layout_width="@dimen/x60"
                                android:layout_height="@dimen/y60"
                                android:scaleType="fitXY"/>

                            <TextView
                                android:textColor="@color/color_8F8F8F"
                                android:gravity="center"
                                android:layout_alignRight="@+id/sign_sunImg"
                                android:layout_alignLeft="@+id/sign_sunImg"
                                android:layout_below="@+id/sign_sunImg"
                                android:text="7天"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </LinearLayout>


                    <TextView
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/sign_signed"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="签到"
                        android:textColor="@color/color_white"
                        android:background="@mipmap/sign_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y70"
                        android:layout_below="@id/sign_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/sign_detail"
                        android:onClick="@{listener.onClick}"
                        android:drawablePadding="@dimen/x10"
                        android:drawableRight="@mipmap/right"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y48"
                        android:textColor="@color/color_8F8F8F"
                        android:textSize="15sp"
                        android:text="极币明细"
                        android:layout_below="@id/sign_signed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_below="@+id/sign_totleContainer"
                    android:id="@+id/sign_bg1"
                    android:layout_marginTop="@dimen/y30"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/sign_bg1"
                    android:layout_width="@dimen/x304"
                    android:layout_height="@dimen/y386"/>

                <LinearLayout
                    android:layout_alignTop="@+id/sign_bg1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y94"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_DEFFFFFF"
                        android:text="剩余极币"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/sign_surplusNum"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/color_DEFFFFFF"
                        android:textStyle="bold"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</layout>
