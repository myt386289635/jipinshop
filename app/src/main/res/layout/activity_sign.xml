<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

    </data>


    <LinearLayout
        android:background="@color/color_F5F5F5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88">

            <include
                android:id="@+id/in_clude"
                layout="@layout/aa_title2"
                bind:listener="@{listener}"/>

            <TextView
                android:gravity="center"
                android:paddingLeft="@dimen/x28"
                android:onClick="@{listener.onClick}"
                android:id="@+id/sign_rule"
                android:paddingRight="@dimen/x28"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_202020"
                android:textSize="15sp"
                android:text="规则说明"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scroll_View"
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@mipmap/sign_bg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="@dimen/y40"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_FFE4C1"
                    android:textSize="24sp"
                    android:text="0"
                    android:id="@+id/sign_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="@dimen/y10"
                    android:layout_below="@id/sign_code"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_FFE4C1"
                    android:textSize="13sp"
                    android:text="我的极币"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
                <TextView
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/sign_detail"
                    android:layout_marginTop="@dimen/y24"
                    android:layout_alignTop="@id/sign_code"
                    android:paddingBottom="@dimen/y13"
                    android:paddingTop="@dimen/y16"
                    android:paddingLeft="@dimen/x23"
                    android:paddingRight="@dimen/x7"
                    android:textSize="13sp"
                    android:text="极币明细"
                    android:textColor="@color/color_E25838"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/y86"
                    android:layout_below="@id/sign_code"
                    android:id="@+id/sign_signContainer"
                    android:layout_marginBottom="@dimen/y20"
                    android:layout_marginRight="@dimen/x28"
                    android:layout_marginLeft="@dimen/x28"
                    android:background="@drawable/bg_sign3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="@dimen/y33"
                        android:id="@+id/sign_tomorrowNum"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_E25838"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/y24"
                        android:text="明日签到极币+0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_marginRight="@dimen/x10"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_marginTop="@dimen/y24"
                            android:background="@color/color_E25838"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y2"/>

                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:id="@+id/sign_container"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_marginRight="@dimen/x45"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="+0"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    android:textSize="14sp"
                                    android:id="@+id/sign_oneImg"
                                    android:background="@drawable/bg_ffc0b2"
                                    android:layout_width="@dimen/x48"
                                    android:layout_height="@dimen/y48"
                                    android:scaleType="fitXY"/>

                                <TextView
                                    android:id="@+id/sign_oneText"
                                    android:layout_marginTop="@dimen/y8"
                                    android:textSize="10sp"
                                    android:textColor="@color/color_9D9D9D"
                                    android:gravity="center"
                                    android:layout_alignRight="@+id/sign_oneImg"
                                    android:layout_alignLeft="@+id/sign_oneImg"
                                    android:layout_below="@+id/sign_oneImg"
                                    android:text="1天"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_marginRight="@dimen/x45"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="+0"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    android:textSize="14sp"
                                    android:id="@+id/sign_twoImg"
                                    android:background="@drawable/bg_ffc0b2"
                                    android:layout_width="@dimen/x48"
                                    android:layout_height="@dimen/y48"
                                    android:scaleType="fitXY"/>

                                <TextView
                                    android:id="@+id/sign_twoText"
                                    android:layout_marginTop="@dimen/y8"
                                    android:textSize="10sp"
                                    android:textColor="@color/color_9D9D9D"
                                    android:gravity="center"
                                    android:layout_alignRight="@+id/sign_twoImg"
                                    android:layout_alignLeft="@+id/sign_twoImg"
                                    android:layout_below="@+id/sign_twoImg"
                                    android:text="2天"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_marginRight="@dimen/x45"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="+0"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    android:textSize="14sp"
                                    android:id="@+id/sign_threeImg"
                                    android:background="@drawable/bg_ffc0b2"
                                    android:layout_width="@dimen/x48"
                                    android:layout_height="@dimen/y48"
                                    android:scaleType="fitXY"/>

                                <TextView
                                    android:id="@+id/sign_threeText"
                                    android:layout_marginTop="@dimen/y8"
                                    android:textSize="10sp"
                                    android:textColor="@color/color_9D9D9D"
                                    android:gravity="center"
                                    android:layout_alignRight="@+id/sign_threeImg"
                                    android:layout_alignLeft="@+id/sign_threeImg"
                                    android:layout_below="@+id/sign_threeImg"
                                    android:text="3天"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_marginRight="@dimen/x45"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="+0"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    android:textSize="14sp"
                                    android:id="@+id/sign_foreImg"
                                    android:background="@drawable/bg_ffc0b2"
                                    android:layout_width="@dimen/x48"
                                    android:layout_height="@dimen/y48"
                                    android:scaleType="fitXY"/>

                                <TextView
                                    android:id="@+id/sign_foreText"
                                    android:layout_marginTop="@dimen/y8"
                                    android:textSize="10sp"
                                    android:textColor="@color/color_9D9D9D"
                                    android:gravity="center"
                                    android:layout_alignRight="@+id/sign_foreImg"
                                    android:layout_alignLeft="@+id/sign_foreImg"
                                    android:layout_below="@+id/sign_foreImg"
                                    android:text="4天"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_marginRight="@dimen/x45"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="+0"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    android:textSize="14sp"
                                    android:id="@+id/sign_fiveImg"
                                    android:background="@drawable/bg_ffc0b2"
                                    android:layout_width="@dimen/x48"
                                    android:layout_height="@dimen/y48"
                                    android:scaleType="fitXY"/>

                                <TextView
                                    android:id="@+id/sign_fiveText"
                                    android:layout_marginTop="@dimen/y8"
                                    android:textSize="10sp"
                                    android:textColor="@color/color_9D9D9D"
                                    android:gravity="center"
                                    android:layout_alignRight="@+id/sign_fiveImg"
                                    android:layout_alignLeft="@+id/sign_fiveImg"
                                    android:layout_below="@+id/sign_fiveImg"
                                    android:text="5天"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_marginRight="@dimen/x45"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="+0"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    android:textSize="14sp"
                                    android:id="@+id/sign_sixImg"
                                    android:background="@drawable/bg_ffc0b2"
                                    android:layout_width="@dimen/x48"
                                    android:layout_height="@dimen/y48"
                                    android:scaleType="fitXY"/>

                                <TextView
                                    android:id="@+id/sign_sixText"
                                    android:layout_marginTop="@dimen/y8"
                                    android:textSize="10sp"
                                    android:textColor="@color/color_9D9D9D"
                                    android:gravity="center"
                                    android:layout_alignRight="@+id/sign_sixImg"
                                    android:layout_alignLeft="@+id/sign_sixImg"
                                    android:layout_below="@+id/sign_sixImg"
                                    android:text="6天"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="+0"
                                    android:gravity="center"
                                    android:textColor="@color/color_white"
                                    android:textSize="14sp"
                                    android:id="@+id/sign_sunImg"
                                    android:background="@drawable/bg_ffc0b2"
                                    android:layout_width="@dimen/x48"
                                    android:layout_height="@dimen/y48"
                                    android:scaleType="fitXY"/>

                                <TextView
                                    android:id="@+id/sign_sunText"
                                    android:layout_marginTop="@dimen/y8"
                                    android:textSize="10sp"
                                    android:textColor="@color/color_9D9D9D"
                                    android:gravity="center"
                                    android:layout_alignRight="@+id/sign_sunImg"
                                    android:layout_alignLeft="@+id/sign_sunImg"
                                    android:layout_below="@+id/sign_sunImg"
                                    android:text="7天"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>


                    <TextView
                        android:textColor="@color/color_E25838"
                        android:textSize="14sp"
                        android:layout_marginBottom="@dimen/y28"
                        android:layout_marginTop="@dimen/y28"
                        android:layout_gravity="center_horizontal"
                        android:drawablePadding="@dimen/x4"
                        android:drawableLeft="@mipmap/sign_bg2"
                        android:text="今日已签到"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <!--我要赚极币-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/x28"
                    android:layout_marginLeft="@dimen/x28"
                    android:background="@drawable/bg_sign2"
                    android:layout_marginBottom="@dimen/y60"
                    android:layout_below="@+id/sign_signContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="@dimen/y36"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="每日任务"
                        android:textSize="16sp"
                        android:textColor="@color/color_DE151515"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.example.administrator.jipinshop.view.listview.MyExtendableListView
                        android:nestedScrollingEnabled="false"
                        android:indicatorLeft="0dp"
                        android:divider="@color/color_white"
                        android:childDivider="@color/color_white"
                        android:dividerHeight="0dp"
                        android:id="@+id/expand_list"
                        android:groupIndicator="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</layout>
