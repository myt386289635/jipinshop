                            android:onClick="@{listener.onClick}"
                            android:id="@+id/member_newBuy"
                            android:layout_marginRight="@dimen/x10"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/member_new_image1"
