                        <ImageView
                            android:layout_marginRight="@dimen/x27"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:tint="@color/color_565252"
                            android:src="@mipmap/right_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <FrameLayout
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x49"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ViewFlipper
                                android:id="@+id/view_flipper"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inAnimation="@anim/anim_in"
                                android:outAnimation="@anim/anim_out"
                                android:layout_gravity="center"/>

                        </FrameLayout>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/member_title1"
                        android:layout_marginTop="@dimen/y25"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/member_adContainer"
                        android:src="@mipmap/member_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/member_newContainer"
                        android:layout_marginRight="@dimen/x20"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginTop="@dimen/y48"
                        android:layout_below="@+id/member_title1"
