<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_above="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/status_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:orientation="vertical"/>

                <ImageView
                    android:scaleType="centerCrop"
                    tools:src="@color/color_E31436"
                    android:id="@+id/detail_imageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x500"/>

                <TextView
                    android:id="@+id/eva_title"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingRight="@dimen/x28"
                    android:paddingLeft="@dimen/x28"
                    android:gravity="center_vertical"
                    tools:text="23款网红榨汁机大测评，国货居然这么能打？居然这么能打"
                    android:textSize="16sp"
                    android:textColor="@color/color_white"
                    android:background="@color/color_B3151515"
                    android:layout_alignBottom="@id/detail_imageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"/>

                <WebView
                    android:layout_marginTop="@dimen/x28"
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_imageTitle"/>


                <View
                    android:id="@+id/detail_headLine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x12"
                    android:layout_below="@id/web_view"
                    android:background="@color/color_F5F5F5"/>

                <RelativeLayout
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/detail_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_headLine"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/x100"
                    android:layout_marginTop="@dimen/x100"
                    android:background="@drawable/bg_good"
                    android:orientation="vertical">


                    <TextView
                        android:gravity="center"
                        android:id="@+id/detail_goodTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/x4"
                        android:drawableTop="@mipmap/appreciate_big"
                        android:text="0"/>


                </RelativeLayout>

                <ImageView
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/title_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/status_bar"
                    android:padding="@dimen/x22"
                    android:src="@mipmap/nav_back"/>

            </RelativeLayout>

        </ScrollView>

        <View
            android:layout_above="@id/bottom_layout"
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:background="@color/color_F5F5F5"/>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x96"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:onClick="@{listener.onClick}"
                android:id="@+id/bottom_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/tab_bar"/>
            </RelativeLayout>


            <RelativeLayout
                android:onClick="@{listener.onClick}"
                android:id="@+id/bottom_favorLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/bottom_favor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/tab_favor_nor"/>

                <TextView
                    android:id="@+id/bottom_favorNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_toRightOf="@id/bottom_favor"
                    android:text="0"/>

            </RelativeLayout>


            <RelativeLayout
                android:onClick="@{listener.onClick}"
                android:id="@+id/bottom_commen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/bottom_community"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/tab_community"/>

                <TextView
                    android:id="@+id/bottom_commenNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_toRightOf="@id/bottom_community"
                    android:text="0"/>
            </RelativeLayout>

            <RelativeLayout
                android:onClick="@{listener.onClick}"
                android:id="@+id/bottom_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:textSize="15sp"
                    android:text="立即购买"
                    android:gravity="center"
                    android:background="@color/color_E31436"
                    android:textColor="@color/color_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </LinearLayout>

        <include
            bind:listener="@{listener}"
            android:id="@+id/in_clude"
            layout="@layout/common_net_error"
            android:visibility="gone"/>

    </RelativeLayout>

</layout>
