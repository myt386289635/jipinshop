<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="@dimen/x640"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_bg"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/shop_guide1"
                android:layout_width="@dimen/x640"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/color_835720"
                android:layout_marginTop="@dimen/y52"
                android:layout_marginLeft="@dimen/x76"
                android:text="您还不是极品VIP会员"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignBottom="@id/item_bg"
                android:id="@+id/item_goMember"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="加入会员"
                android:background="@drawable/bg_835720_2"
                android:layout_marginBottom="@dimen/y60"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/x488"
                android:layout_height="@dimen/y82"/>

            <TextView
                android:layout_marginRight="@dimen/x92"
                android:layout_marginTop="-20dp"
                android:layout_alignTop="@id/item_goMember"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textColor="@color/color_C35E07"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@mipmap/dialog_need"
                android:text="限时仅需0.01元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/dialog_dismiss"
            android:layout_marginTop="@dimen/y150"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>
