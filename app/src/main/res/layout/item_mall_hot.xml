<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:id="@+id/item_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/item_image"
            android:src="@color/color_835720"
            android:layout_width="@dimen/x210"
            android:layout_height="@dimen/y210"/>

        <TextView
            android:id="@+id/item_name"
            android:layout_marginBottom="@dimen/y2"
            android:layout_marginTop="@dimen/y12"
            android:textColor="@color/color_202020"
            android:textSize="10sp"
            android:singleLine="true"
            android:text="LION/狮王趣净泡沫…LION/狮王趣净泡沫…"
            android:layout_width="@dimen/x210"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_code"
            android:layout_marginBottom="@dimen/y30"
            android:textColor="@color/color_E25838"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="2900极币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>
