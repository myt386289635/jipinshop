<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.administrator.jipinshop.view.viewpager.TouchViewPager
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:id="@+id/main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y280"/>

        <LinearLayout
            android:id="@+id/main_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_viewpager"
            android:layout_marginTop="-18dp"
            android:gravity="center"
            android:orientation="horizontal"/>

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:layout_below="@+id/main_viewpager"
            android:id="@+id/main_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y77"/>

        <com.example.administrator.jipinshop.view.viewpager.MyViewPager
            android:id="@+id/main_grid"
            android:layout_below="@id/main_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y423"/>

        <LinearLayout
            android:layout_below="@id/main_grid"
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y24"
            android:gravity="center"
            android:orientation="horizontal"/>

    </RelativeLayout>
</layout>