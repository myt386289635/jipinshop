<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.administrator.jipinshop.view.viewpager.TouchViewPager
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:id="@+id/main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y300"/>

        <LinearLayout
            android:id="@+id/main_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_viewpager"
            android:layout_marginTop="-18dp"
            android:gravity="center"
            android:orientation="horizontal"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginBottom="@dimen/y16"
            android:layout_below="@id/main_viewpager"
            android:id="@+id/grid_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/grid_point"
            android:background="@color/color_FFD9D0"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/grid_viewpager"
            android:layout_marginBottom="@dimen/y23"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y5">

            <View
                android:id="@+id/point"
                android:background="@color/color_E34310"
                android:layout_width="@dimen/x60"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>