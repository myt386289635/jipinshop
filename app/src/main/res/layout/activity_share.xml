<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>
    </data>

    <RelativeLayout
        android:background="@color/color_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/in_clude"
            layout="@layout/aa_title2"
            bind:listener="@{listener}"/>

        <TextView
            android:onClick="@{listener.onClick}"
            android:id="@+id/share_help"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/color_0E0402"
            android:text="帮助"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y88"/>

        <TextView
            android:layout_below="@id/share_help"
            android:id="@+id/share_money"
            android:paddingLeft="@dimen/x28"
            android:gravity="center_vertical"
            tools:text="分享后复制【评论区文案】，预估收益3.88元！"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/color_E25838"
            android:background="@color/color_FFE4E4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"/>

        <LinearLayout
            android:id="@+id/share_bottomLayout"
            android:layout_alignParentBottom="true"
            android:elevation="9dp"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/y20"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_565252"
                android:textSize="16sp"
                android:text="图文分享到"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/y5"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_9D9D9D"
                android:textSize="13sp"
                android:text="每日可赚50极币"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginBottom="@dimen/y30"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/share_wechat"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/share_wecha_other"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y80"/>

                    <TextView
                        android:layout_marginTop="@dimen/y9"
                        android:textColor="@color/color_565252"
                        android:textSize="13sp"
                        android:text="微信"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/share_pyq"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/share_pyq_other"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y80"/>

                    <TextView
                        android:layout_marginTop="@dimen/y9"
                        android:textColor="@color/color_565252"
                        android:textSize="13sp"
                        android:text="朋友圈"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/share_qq"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/share_qq_other"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y80"/>

                    <TextView
                        android:layout_marginTop="@dimen/y9"
                        android:textColor="@color/color_565252"
                        android:textSize="13sp"
                        android:text="QQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/share_wb"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/share_weibo_other"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y80"/>

                    <TextView
                        android:layout_marginTop="@dimen/y9"
                        android:textColor="@color/color_565252"
                        android:textSize="13sp"
                        android:text="微博"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/share_pic"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/share_pic_other"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y80"/>

                    <TextView
                        android:layout_marginTop="@dimen/y9"
                        android:textColor="@color/color_565252"
                        android:textSize="13sp"
                        android:text="批量存图"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:scrollbars="none"
            android:fillViewport="true"
            android:layout_above="@id/share_bottomLayout"
            android:layout_below="@id/share_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:layout_marginBottom="@dimen/y28"
                    android:layout_marginTop="@dimen/y28"
                    android:id="@+id/share_images"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y188"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/color_202020"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="分享文案"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/share_title"
                    android:lineSpacingExtra="@dimen/y8"
                    android:textColor="@color/color_565252"
                    android:textSize="12sp"
                    tools:text="医院同款欧勒化痰止咳雾化器
\n【原价】268元
\n【限时抢购】218元
\n【下载极品城再省】21.18元
\n【推荐理由】儿童成人都可用，老人、宝宝咳嗽不用愁！只用一款实用的雾化器就行，医院同款，易吸收低噪音，原药雾化临床效果好使用寿命长，可自由调节，符合医用级标准。
\n---------
\n长按復至"
                    android:scrollbars="vertical"
                    android:paddingTop="@dimen/y10"
                    android:paddingRight="@dimen/x10"
                    android:paddingLeft="@dimen/x10"
                    android:background="@color/color_F5F5F5"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y200"/>

                <TextView
                    android:id="@+id/share_content"
                    android:scrollbars="vertical"
                    android:textColor="@color/color_565252"
                    android:textSize="13sp"
                    tools:text="长按復至W8PF16Y3P26，进入【Tao宝】即可抢购"
                    android:paddingTop="@dimen/y25"
                    android:paddingRight="@dimen/x10"
                    android:paddingLeft="@dimen/x10"
                    android:background="@color/color_F5F5F5"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y120"/>

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/y20"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:paddingBottom="@dimen/y10"
                        android:paddingTop="@dimen/y10"
                        android:background="@android:color/transparent"
                        android:id="@+id/share_checkBox1"
                        android:textSize="14sp"
                        android:textColor="@color/color_202020"
                        android:gravity="center_vertical"
                        android:checked="true"
                        android:drawablePadding="@dimen/x10"
                        android:drawableLeft="@drawable/share_tab"
                        android:button="@null"
                        android:text="淘口令"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:paddingBottom="@dimen/y10"
                        android:paddingTop="@dimen/y10"
                        android:checked="true"
                        android:background="@android:color/transparent"
                        android:id="@+id/share_checkBox2"
                        android:textSize="14sp"
                        android:textColor="@color/color_202020"
                        android:layout_marginLeft="@dimen/x50"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/x10"
                        android:drawableLeft="@drawable/share_tab"
                        android:button="@null"
                        android:text="下载链接"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:paddingBottom="@dimen/y10"
                        android:paddingTop="@dimen/y10"
                        android:checked="true"
                        android:background="@android:color/transparent"
                        android:id="@+id/share_checkBox3"
                        android:textSize="14sp"
                        android:textColor="@color/color_202020"
                        android:layout_marginLeft="@dimen/x50"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/x10"
                        android:drawableLeft="@drawable/share_tab"
                        android:button="@null"
                        android:text="邀请码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/share_copy"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/y30"
                    android:paddingBottom="@dimen/y7"
                    android:paddingTop="@dimen/y7"
                    android:paddingRight="@dimen/x45"
                    android:paddingLeft="@dimen/x45"
                    android:text="复制评论淘口令"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/color_white"
                    android:background="@drawable/bg_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>
