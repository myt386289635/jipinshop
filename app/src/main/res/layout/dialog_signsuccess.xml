<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:minWidth="@dimen/x480"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_gravity="center"
        android:background="@mipmap/bg_update"
        android:layout_width="@dimen/x480"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/update_title"
            android:layout_marginLeft="@dimen/x32"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/y118"
            android:textStyle="bold"
            android:textColor="@color/color_DEFFFFFF"
            android:text="发现新版本"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="@dimen/x32"
            android:id="@+id/update_varsonNum"
            android:layout_marginTop="@dimen/y4"
            android:layout_below="@id/update_title"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/color_DEFFFFFF"
            android:text="v1.0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/update_contentTitle"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/y112"
            android:layout_below="@id/update_varsonNum"
            android:textSize="14sp"
            android:textColor="@color/color_DE575757"
            android:text="更新内容："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:minHeight="@dimen/y136"
            android:layout_marginRight="@dimen/x32"
            android:id="@+id/update_content"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/y8"
            android:layout_below="@id/update_contentTitle"
            android:textSize="14sp"
            android:textColor="@color/color_DE575757"
            android:text="1.UI交互体验升级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="@dimen/y54"
            android:id="@+id/update"
            android:layout_marginTop="@dimen/y52"
            android:layout_below="@id/update_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/color_DEFFFFFF"
            android:textSize="15sp"
            android:text="立即更新"
            android:background="@drawable/bg_update"
            android:layout_width="@dimen/x228"
            android:layout_height="@dimen/y68"/>

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="@dimen/y64"
        android:id="@+id/update_close"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/close_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>