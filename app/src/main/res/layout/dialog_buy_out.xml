<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/x630"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dialog_image"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@mipmap/member1_bg8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dialog_cancle"
            android:layout_marginLeft="@dimen/x70"
            android:layout_marginBottom="@dimen/y78"
            android:layout_alignBottom="@+id/dialog_image"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="放弃支付"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_ffffff_5"
            android:layout_width="@dimen/x181"
            android:layout_height="@dimen/y72"/>

        <ImageView
            android:id="@+id/dialog_sure"
            android:layout_toRightOf="@id/dialog_cancle"
            android:layout_alignRight="@id/dialog_image"
            android:scaleType="fitCenter"
            android:layout_marginRight="@dimen/x60"
            android:layout_alignTop="@id/dialog_cancle"
            android:layout_alignBottom="@id/dialog_cancle"
            android:src="@mipmap/member1_bg9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/dialog_dismiss"
            android:layout_marginTop="@dimen/y70"
            android:layout_below="@id/dialog_image"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>
