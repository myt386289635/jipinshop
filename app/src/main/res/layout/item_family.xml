<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y122">

        <ImageView
            android:src="@mipmap/rlogo"
            android:id="@+id/item_image"
            android:layout_marginLeft="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x82"
            android:layout_height="@dimen/y82"/>

        <TextView
            android:id="@+id/item_name"
            android:textStyle="bold"
            android:textColor="@color/color_565252"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/x21"
            android:layout_toRightOf="@id/item_image"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/item_vip"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@id/item_name"
            android:layout_centerVertical="true"
            android:src="@mipmap/bg_family_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tag"
            android:drawablePadding="@dimen/x4"
            android:drawableRight="@mipmap/right_ash1"
            android:textColor="@color/color_9D9D9D"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/x30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="本人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/color_DEDEDE"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"/>

    </RelativeLayout>
</layout>
