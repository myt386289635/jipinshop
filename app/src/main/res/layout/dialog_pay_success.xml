<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:background="@drawable/bg_dialog"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="@dimen/x620"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginBottom="@dimen/y30"
                android:layout_marginTop="@dimen/y30"
                android:src="@mipmap/pay_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:textColor="@color/color_DE151515"
                android:textSize="16sp"
                android:text="支付成功"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dialog_content"
                android:layout_marginBottom="@dimen/y52"
                android:layout_marginTop="@dimen/y12"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/y8"
                android:textSize="15sp"
                android:textColor="@color/color_9D9D9D"
                android:text="恭喜成为极品城会员\n2021-03-08日后到期"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="@dimen/y40"
                android:id="@+id/dialog_dismiss"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/color_white"
                android:text="我知道了"
                android:background="@drawable/bg_login2"
                android:layout_width="@dimen/x260"
                android:layout_height="@dimen/y76"/>

        </LinearLayout>
    </RelativeLayout>

</layout>
