<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/item_image"
        android:layout_width="@dimen/x110"
        android:layout_height="@dimen/y110"/>

    <TextView
        android:id="@+id/item_name"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="婴儿洗衣婴儿洗衣"
        android:textColor="@color/color_565252"
        android:textSize="12sp"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y10"
        android:layout_alignTop="@id/item_image"
        android:layout_toRightOf="@id/item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/item_price"
        android:layout_marginBottom="@dimen/y10"
        android:textColor="@color/color_E25838"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="¥39.9"
        android:layout_marginLeft="@dimen/x30"
        android:layout_toRightOf="@id/item_image"
        android:layout_alignBottom="@id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.example.administrator.jipinshop.view.textview.TextViewDel
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/item_oldprice"
        android:textColor="@color/color_9D9D9D"
        android:textSize="11sp"
        android:text="¥39.9"
        android:layout_marginBottom="@dimen/y2"
        android:layout_marginLeft="@dimen/x4"
        android:layout_toRightOf="@id/item_price"
        android:layout_alignBottom="@id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>