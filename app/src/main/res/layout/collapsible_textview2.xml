<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/bg_f5f5f5_2"
    android:id="@+id/desc_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x15"
        android:src="@mipmap/detail_reason_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="@dimen/y5"
        android:layout_marginTop="@dimen/y5"
        android:text=""
        android:lineSpacingExtra="@dimen/y28"
        android:layout_marginRight="@dimen/x65"
        android:layout_marginLeft="@dimen/x51"
        android:ellipsize="end"
        android:id="@+id/desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/color_565252"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/desc_img"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/y43"
        android:layout_marginRight="@dimen/x28"
        android:layout_gravity="right"
        android:src="@mipmap/detail_reason_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--可以灵活的将收藏的按钮至右 至左 居中  -->
    <TextView
        android:paddingRight="@dimen/x30"
        android:paddingLeft="@dimen/x30"
        android:paddingTop="@dimen/y17"
        android:textColor="@color/color_CECECE"
        android:drawablePadding="@dimen/x6"
        android:text="展开更多"
        android:textSize="11sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/y27"
        android:drawableTint="@color/color_CACACA"
        android:drawableRight="@mipmap/right_down"
        android:id="@+id/desc_op_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>