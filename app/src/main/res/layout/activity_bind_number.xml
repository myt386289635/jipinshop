<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/color_white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/aa_title"/>

    <TextView
        android:textColor="@color/color_ACACAC"
        android:layout_marginTop="@dimen/y60"
        android:layout_gravity="center_horizontal"
        android:text="为了你的账号安全，请绑定手机号 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/x140"
        android:layout_marginBottom="@dimen/x10"
        android:id="@+id/login_numberLayout"
        android:layout_marginRight="@dimen/x80"
        android:layout_marginLeft="@dimen/x80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/login_numberImg"
            android:layout_marginLeft="@dimen/x8"
            android:layout_centerVertical="true"
            android:src="@mipmap/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <EditText
            android:maxLength="11"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/x20"
            android:textColorHint="@color/color_ACACAC"
            android:hint="输入手机号 "
            android:id="@+id/login_number"
            android:background="@null"
            android:layout_toRightOf="@id/login_numberImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="@dimen/x42"
            android:background="@color/color_F5F5F5"
            android:layout_below="@id/login_number"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@id/login_numberImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_codeLayout"
        android:layout_marginBottom="@dimen/x58"
        android:layout_marginRight="@dimen/x80"
        android:layout_marginLeft="@dimen/x80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/login_codeImg"
            android:layout_marginLeft="@dimen/x8"
            android:layout_centerVertical="true"
            android:src="@mipmap/verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <EditText
            android:inputType="number"
            android:layout_toLeftOf="@id/login_getCode"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/x20"
            android:textColorHint="@color/color_ACACAC"
            android:hint="短信验证码"
            android:id="@+id/login_code"
            android:background="@null"
            android:layout_toRightOf="@id/login_codeImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="@dimen/x42"
            android:background="@color/color_F5F5F5"
            android:layout_below="@id/login_getCode"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@id/login_codeImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"/>

        <TextView
            android:textSize="12sp"
            android:padding="@dimen/x10"
            android:text="获取验证码"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_login"
            android:layout_alignParentRight="true"
            android:id="@+id/login_getCode"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <Button
        android:textStyle="bold"
        android:background="@drawable/bg_login"
        android:textColor="@color/color_white"
        android:text="立即绑定"
        android:id="@+id/login_button"
        android:layout_marginRight="@dimen/x80"
        android:layout_marginLeft="@dimen/x80"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x72"/>

</LinearLayout>