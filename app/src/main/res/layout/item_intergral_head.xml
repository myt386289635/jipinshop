<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/color_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x220">
    
    <View
        android:layout_alignParentBottom="true"
        android:background="@color/color_F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x12"/>


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:id="@+id/item_intergral"
            android:textSize="24sp"
            android:textColor="@color/color_E31436"
            android:text="389"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/item_detail"
            android:drawablePadding="@dimen/x10"
            android:textColor="@color/color_ACACAC"
            android:drawableRight="@mipmap/integral_right1"
            android:layout_marginTop="@dimen/x8"
            android:text="积分明细"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    
</RelativeLayout>