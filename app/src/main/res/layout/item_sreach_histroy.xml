<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/histroy_item"
        android:background="@drawable/bg_sreach_histroy"
        android:textSize="15sp"
        android:textColor="@color/color_565252"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:text="电动牙刷"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:visibility="gone"
        android:padding="@dimen/x5"
        android:id="@+id/histroy_delete"
        android:layout_marginTop="@dimen/x20"
        android:layout_alignRight="@id/histroy_item"
        android:src="@mipmap/search_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>