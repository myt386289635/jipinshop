<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:minWidth="@dimen/x550"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dialog_background"
                android:src="@mipmap/bg_parity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_alignBottom="@id/dialog_background"
                android:layout_marginBottom="@dimen/y50"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/color_9D9D9D"
                    android:text="本提示与淘宝比价订单佣金调整政策相关，"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/y8"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/color_9D9D9D"
                        android:text="具体详见"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/dialog_parity"
                        android:textSize="12sp"
                        android:textColor="@color/color_FF5E56"
                        android:text="《比价订单新规说明》"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/y100"
            android:id="@+id/dialog_cancle"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/h5_close"
            android:layout_width="@dimen/x55"
            android:layout_height="@dimen/y55"/>


    </LinearLayout>
</layout>
