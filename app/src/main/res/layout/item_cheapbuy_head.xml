<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/y37"
            android:id="@+id/item_rule"
            android:paddingBottom="@dimen/y10"
            android:paddingTop="@dimen/y10"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x15"
            android:textSize="12sp"
            android:text="规则说明"
            android:minHeight="@dimen/y56"
            android:textColor="@color/color_EA5018"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_fff7eb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/item_bg"
            android:layout_marginTop="@dimen/y375"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:background="@mipmap/bg_cheap5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="@dimen/y39"
            android:layout_below="@id/item_bg"
            android:layout_marginBottom="@dimen/y40"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:adjustViewBounds="true"
            android:src="@mipmap/bg_cheap2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.example.administrator.jipinshop.view.textview.RunTextView
            android:layout_marginLeft="@dimen/x172"
            android:layout_alignLeft="@id/item_bg"
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/item_bg"
            android:layout_alignTop="@id/item_bg"
            android:id="@+id/item_cheapPrice"
            android:textColor="@color/color_EA5018"
            android:textStyle="bold"
            android:textSize="38sp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@id/item_cheapPrice"
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/item_bg"
            android:layout_alignTop="@id/item_bg"
            android:textColor="@color/color_EA5018"
            android:textStyle="bold"
            android:textSize="38sp"
            android:text="元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>
