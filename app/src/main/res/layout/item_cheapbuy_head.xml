<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@mipmap/bg_cheap1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/y37"
            android:id="@+id/item_rule"
            android:paddingBottom="@dimen/y10"
            android:paddingTop="@dimen/y10"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x15"
            android:textSize="12sp"
            android:text="规则说明"
            android:minHeight="@dimen/y56"
            android:textColor="@color/color_EA5018"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_fff7eb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/item_cheapContainer"
            android:layout_marginTop="@dimen/y212"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="补贴总额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="@dimen/x4"
                android:id="@+id/item_cheapPrice"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:textSize="33sp"
                android:text="0元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:layout_below="@+id/item_cheapContainer"
            android:id="@+id/item_bg"
            android:layout_marginTop="@dimen/y27"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:background="@mipmap/bg_cheap5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="@dimen/y20"
            android:layout_below="@+id/item_bg"
            android:layout_marginBottom="@dimen/y20"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:adjustViewBounds="true"
            android:src="@mipmap/bg_cheap2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/x267"
            android:layout_alignBottom="@+id/item_bg"
            android:layout_alignTop="@+id/item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/color_EA5018"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="即将到期:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="@dimen/x4"
                android:id="@+id/item_tempPrice"
                android:textColor="@color/color_EA5018"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="0元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/color_E25838"
            android:id="@+id/item_time"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginBottom="@dimen/y4"
            android:layout_marginLeft="@dimen/x24"
            android:layout_alignLeft="@+id/item_bg"
            android:layout_alignBottom="@+id/item_bg"
            android:text="0秒"
            android:minWidth="@dimen/x160"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>
