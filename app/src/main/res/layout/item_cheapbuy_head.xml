<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@color/color_E34310"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:adjustViewBounds="true"
            android:src="@mipmap/bg_cheap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/item_priceContainer"
            android:layout_marginTop="@dimen/y44"
            android:layout_marginLeft="@dimen/x96"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/color_FFF3E0"
                android:text="累计已为您节省"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_price"
                    android:textStyle="bold"
                    android:text="787.59"
                    android:textColor="@color/color_FFF3E0"
                    android:textSize="33sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:drawablePadding="@dimen/x7"
                    android:drawableRight="@mipmap/right"
                    android:drawableTint="@color/color_FFF3E0"
                    android:text="元"
                    android:textColor="@color/color_FFF3E0"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/y40"
            android:id="@+id/item_rule"
            android:paddingBottom="@dimen/y10"
            android:paddingTop="@dimen/y10"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x15"
            android:textSize="12sp"
            android:text="规则说明"
            android:textColor="@color/color_EA5018"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_fff7eb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginBottom="@dimen/y33"
            android:layout_marginTop="@dimen/y235"
            android:layout_marginRight="@dimen/x7"
            android:layout_marginLeft="@dimen/x7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:adjustViewBounds="true"
                android:src="@mipmap/bg_cheap2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_cheapText"
                android:layout_marginTop="@dimen/y40"
                android:layout_marginLeft="@dimen/x40"
                android:textColor="@color/color_EA5018"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="我的津贴余额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/y3"
                android:layout_below="@id/item_cheapText"
                android:layout_marginLeft="@dimen/x40"
                android:id="@+id/item_cheapPrice"
                android:textColor="@color/color_EA5018"
                android:textStyle="bold"
                android:textSize="33sp"
                android:text="56.25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginBottom="@dimen/y13"
                android:layout_toRightOf="@id/item_cheapPrice"
                android:layout_alignBottom="@id/item_cheapPrice"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/color_EA5018"
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_change"
                android:background="@drawable/bg_ffaa23"
                android:layout_marginTop="@dimen/y84"
                android:layout_marginRight="@dimen/x42"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/x29"
                android:paddingLeft="@dimen/x29"
                android:paddingTop="@dimen/y8"
                android:paddingBottom="@dimen/y8"
                android:textSize="13sp"
                android:textColor="@color/color_38332D"
                android:text="去兑换津贴"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>
