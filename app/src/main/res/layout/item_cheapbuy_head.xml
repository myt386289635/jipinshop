<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/y37"
            android:id="@+id/item_rule"
            android:paddingBottom="@dimen/y10"
            android:paddingTop="@dimen/y10"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x15"
            android:textSize="12sp"
            android:text="规则说明"
            android:minHeight="@dimen/y56"
            android:textColor="@color/color_EA5018"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_fff7eb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginBottom="@dimen/y40"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y425"
            android:adjustViewBounds="true"
            android:src="@mipmap/bg_cheap2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_cheapText"
            android:layout_marginTop="@dimen/y46"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            android:text="津贴余额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y4"
            android:layout_below="@id/item_cheapText"
            android:id="@+id/item_cheapPrice"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:textSize="40sp"
            android:text="￥0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>
