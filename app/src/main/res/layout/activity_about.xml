<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

    </data>

    <LinearLayout
        android:background="@color/color_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/in_clude"
            layout="@layout/aa_title2"
            bind:listener="@{listener}"/>

        <ImageView
            android:layout_marginTop="@dimen/y67"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@mipmap/logo"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y120"/>

        <TextView
            android:textColor="@color/color_9D9D9D"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/y28"
            android:layout_gravity="center_horizontal"
            android:text="淘好物，更省钱！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:onClick="@{listener.onClick}"
            android:id="@+id/about_version"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y52"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y72">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/color_202020"
                android:textSize="15sp"
                android:text="检查更新"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/about_versionName"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_989898"
                android:textSize="13sp"
                android:text="V2.0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/color_D8D8D8"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"/>

        </RelativeLayout>

        <RelativeLayout
            android:onClick="@{listener.onClick}"
            android:id="@+id/about_privacy"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y28"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y72">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/color_202020"
                android:textSize="15sp"
                android:text="隐私政策"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:paddingRight="@dimen/x14"
                android:src="@mipmap/setting_right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D8D8D8"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"/>

        </RelativeLayout>

        <RelativeLayout
            android:onClick="@{listener.onClick}"
            android:id="@+id/about_user"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y28"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y72">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/color_202020"
                android:textSize="15sp"
                android:text="用户协议"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:paddingRight="@dimen/x14"
                android:src="@mipmap/setting_right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D8D8D8"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"/>

        </RelativeLayout>

        <RelativeLayout
            android:onClick="@{listener.onClick}"
            android:id="@+id/about_cancellation"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y28"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y72">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/color_202020"
                android:textSize="15sp"
                android:text="注销账号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:paddingRight="@dimen/x14"
                android:src="@mipmap/setting_right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <View
                android:background="@color/color_D8D8D8"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"/>

        </RelativeLayout>

    </LinearLayout>
</layout>
