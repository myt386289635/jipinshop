<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="bean"
            type="com.example.administrator.jipinshop.bean.MemberNewBean.DataBean.LevelDetail6Bean.ListBeanXX"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y126">

        <TextView
            android:id="@+id/item_title"
            android:textColor="@color/color_202020"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginLeft="@dimen/x26"
            android:text="@{bean.title}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_time"
            android:textColor="@color/color_9D9D9D"
            android:textSize="14sp"
            android:text="@{bean.content}"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginBottom="@dimen/y20"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/color_E25838"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginRight="@dimen/x26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@{bean.levelContent}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/color_DEDEDE"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"/>

    </RelativeLayout>
</layout>
