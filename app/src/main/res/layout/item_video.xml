<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/item_container"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120">

        <ImageView
            android:id="@+id/item_play"
            android:layout_marginTop="@dimen/y31"
            android:layout_alignParentRight="true"
            android:src="@mipmap/school_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@+id/item_play"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/item_name"
                android:textColor="@color/color_202020"
                android:textSize="12sp"
                android:text="一分钟了解极品城"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/y12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:drawablePadding="@dimen/x4"
                    android:id="@+id/item_lookNum"
                    android:textColor="@color/color_9D9D9D"
                    android:textSize="10sp"
                    android:text="0人学习"
                    android:drawableLeft="@mipmap/school_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="@dimen/x195"
                    android:drawablePadding="@dimen/x4"
                    android:id="@+id/item_goodNum"
                    android:textColor="@color/color_9D9D9D"
                    android:textSize="10sp"
                    android:text="0"
                    android:drawableLeft="@mipmap/school_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="@dimen/x325"
                    android:drawablePadding="@dimen/x4"
                    android:id="@+id/item_shareNum"
                    android:textColor="@color/color_9D9D9D"
                    android:textSize="10sp"
                    android:text="0"
                    android:drawableLeft="@mipmap/school_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/color_D8D8D8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"/>

    </RelativeLayout>
</layout>
