<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/grid_viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y203"/>
        
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/grid_point"
            android:background="@color/color_D8D8D8"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/grid_viewpager"
            android:layout_marginBottom="@dimen/y20"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y5">
            
            <View
                android:id="@+id/point"
                android:background="@color/color_E25838"
                android:layout_width="@dimen/x45"
                android:layout_height="match_parent"/>
            
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_below="@id/grid_point"
            android:background="@color/color_F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"/>

    </RelativeLayout>
</layout>
