<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <include
            bind:listener="@{listener}"
            android:id="@+id/in_clude"
            layout="@layout/aa_title"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x80"
            android:layout_marginRight="@dimen/x80"
            android:layout_marginTop="@dimen/x88">


            <ImageView
                android:id="@+id/login_numberImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8"
                android:src="@mipmap/bound_number"/>


            <EditText
                android:id="@+id/bound_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@id/login_numberImg"
                android:background="@null"
                android:hint="请输入支付宝账号"
                android:textColorHint="@color/color_ACACAC"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_below="@id/bound_name"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/x42"
                android:layout_toRightOf="@id/login_numberImg"
                android:background="@color/color_F5F5F5"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x80"
            android:layout_marginRight="@dimen/x80"
            android:layout_marginTop="@dimen/x20">


            <ImageView
                android:id="@+id/bound_numberImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8"
                android:src="@mipmap/bound_name"/>


            <EditText
                android:id="@+id/bound_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@id/bound_numberImg"
                android:background="@null"
                android:hint="请输入支付宝的真实姓名"
                android:textColorHint="@color/color_ACACAC"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_below="@id/bound_number"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/x42"
                android:layout_toRightOf="@id/bound_numberImg"
                android:background="@color/color_F5F5F5"/>


        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/login_numberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x80"
            android:layout_marginRight="@dimen/x80"
            android:layout_marginTop="@dimen/x20">


            <ImageView
                android:id="@+id/bound_phoneImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8"
                android:src="@mipmap/phone_number"/>


            <EditText
                android:id="@+id/hound_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@id/bound_phoneImg"
                android:background="@null"
                android:digits="0123456789"
                android:hint="输入手机号 "
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/color_ACACAC"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_below="@id/hound_phone"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/x42"
                android:layout_toRightOf="@id/bound_phoneImg"
                android:background="@color/color_F5F5F5"/>


        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/login_codeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x58"
            android:layout_marginLeft="@dimen/x80"
            android:layout_marginRight="@dimen/x80"
            android:layout_marginTop="@dimen/x20">


            <ImageView
                android:id="@+id/login_codeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8"
                android:src="@mipmap/verification_code"/>


            <EditText
                android:id="@+id/login_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toLeftOf="@id/login_getCode"
                android:layout_toRightOf="@id/login_codeImg"
                android:background="@null"
                android:hint="短信验证码"
                android:inputType="number"
                android:textColorHint="@color/color_ACACAC"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_below="@id/login_getCode"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/x42"
                android:layout_toRightOf="@id/login_codeImg"
                android:background="@color/color_F5F5F5"/>

            <TextView
                android:onClick="@{listener.onClick}"
                android:id="@+id/login_getCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_login"
                android:padding="@dimen/x10"
                android:text="获取验证码"
                android:textColor="@color/color_white"
                android:textSize="12sp"/>


        </RelativeLayout>

        <Button
            android:onClick="@{listener.onClick}"
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x72"
            android:layout_marginTop="@dimen/x60"
            android:layout_marginLeft="@dimen/x80"
            android:layout_marginRight="@dimen/x80"
            android:background="@drawable/bg_login"
            android:text="保存"
            android:textColor="@color/color_white"
            android:textStyle="bold"/>

    </LinearLayout>

</layout>

