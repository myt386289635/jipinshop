<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bg_free"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_free"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y472"/>

        <RelativeLayout
            android:layout_alignTop="@id/bg_free"
            android:layout_alignBottom="@id/bg_free"
            android:id="@+id/free_invitationContanier"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/y62"
                android:id="@+id/free_invitation"
                android:layout_marginTop="@dimen/y24"
                android:src="@mipmap/bg_free2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_above="@id/free_invitation"
                android:layout_centerHorizontal="true"
                android:id="@+id/bg_free1"
                android:src="@mipmap/bg_free1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/y18"
                android:layout_above="@id/bg_free1"
                android:id="@+id/free_rule"
                android:paddingBottom="@dimen/y13"
                android:paddingTop="@dimen/y16"
                android:paddingLeft="@dimen/x23"
                android:paddingRight="@dimen/x7"
                android:textSize="12sp"
                android:text="规则说明"
                android:textColor="@color/color_FFF5D6"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_e25838"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="@color/color_E25838"
            android:layout_below="@id/bg_free"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/bg_free3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

    </RelativeLayout>
</layout>
