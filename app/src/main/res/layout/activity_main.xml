<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.home.MainActivity">

    <com.example.administrator.jipinshop.view.viewpager.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_above="@id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.TabLayout
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIndicatorHeight="0dp"
        app:tabBackground="@color/transparent"
        android:background="@color/color_white"
        android:id="@+id/tab_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_above="@id/tab_layout"
        android:background="@color/color_F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"/>

    <RelativeLayout
        android:id="@+id/login_background"
        android:background="#7D000000"
        android:layout_above="@id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80">

        <TextView
            android:id="@+id/login_go"
            android:gravity="center"
            android:minHeight="@dimen/y52"
            android:paddingRight="@dimen/x15"
            android:paddingLeft="@dimen/x15"
            android:paddingBottom="@dimen/y6"
            android:paddingTop="@dimen/y6"
            android:textSize="14sp"
            android:text="立即登录"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_free_dialog2"
            android:layout_marginRight="@dimen/x25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="@dimen/x25"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:text="首单全免资格即将过期"
            android:id="@+id/login_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/x14"
            android:layout_toRightOf="@id/login_notice"
            android:layout_centerVertical="true"
            android:id="@+id/login_timeContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:minWidth="@dimen/x38"
                android:id="@+id/dialog_hour"
                android:textSize="13sp"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/color_white"
                android:background="@drawable/bg_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y38"/>

            <TextView
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="13sp"
                android:textColor="@color/color_202020"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dialog_minute"
                android:textSize="13sp"
                android:gravity="center"
                android:text="30"
                android:textColor="@color/color_white"
                android:background="@drawable/bg_time"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/y38"/>

            <TextView
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="13sp"
                android:textColor="@color/color_202020"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dialog_second"
                android:textSize="13sp"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/color_white"
                android:background="@drawable/bg_time"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/y38"/>

        </LinearLayout>

    </RelativeLayout>

    <!--新手指导-->
    <RelativeLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/guide_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_99000000"
            android:orientation="vertical"/>

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/bg_guide1"
            android:layout_below="@id/status_bar"
            android:adjustViewBounds="true"
            android:src="@mipmap/guide_home1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/color_99000000"
            android:layout_below="@id/bg_guide1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_marginTop="@dimen/y9"
            android:id="@+id/bg_guide2"
            android:layout_below="@id/bg_guide1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@mipmap/guide_home2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/y12"
            android:layout_below="@id/bg_guide2"
            android:id="@+id/guide_sreach"
            android:gravity="center"
            android:text="试试搜索该商品"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/color_white"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_withdraw"
            android:layout_width="@dimen/x520"
            android:layout_height="@dimen/y80"/>

        <ImageView
            android:layout_below="@id/guide_sreach"
            android:padding="@dimen/x20"
            android:layout_marginTop="@dimen/y46"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:id="@+id/dialog_cancle"
            android:src="@mipmap/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:id="@+id/guide_ok"
        android:src="@mipmap/guide_home3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>