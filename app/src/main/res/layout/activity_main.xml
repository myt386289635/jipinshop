<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools"
         tools:context=".activity.home.MainActivity">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.administrator.jipinshop.view.viewpager.NoScrollViewPager
            android:id="@+id/view_pager"
            android:layout_above="@id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.design.widget.TabLayout
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabIndicatorHeight="0dp"
            app:tabBackground="@color/transparent"
            android:background="@color/color_white"
            android:id="@+id/tab_layout"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_above="@id/tab_layout"
            android:background="@color/color_F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"/>

        <RelativeLayout
            android:id="@+id/login_background"
            android:background="#7D000000"
            android:layout_above="@id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80">

            <TextView
                android:onClick="@{listener.onClick}"
                android:id="@+id/login_go"
                android:gravity="center"
                android:minHeight="@dimen/y52"
                android:paddingRight="@dimen/x15"
                android:paddingLeft="@dimen/x15"
                android:paddingBottom="@dimen/y6"
                android:paddingTop="@dimen/y6"
                android:textSize="14sp"
                android:text="立即登录"
                android:textColor="@color/color_white"
                android:background="@drawable/bg_free_dialog2"
                android:layout_marginRight="@dimen/x25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="@dimen/x25"
                android:layout_centerVertical="true"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:text="首单全免资格即将过期"
                android:id="@+id/login_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/x14"
                android:layout_toRightOf="@id/login_notice"
                android:layout_centerVertical="true"
                android:id="@+id/login_timeContainer"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:minWidth="@dimen/x38"
                    android:id="@+id/dialog_hour"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/color_white"
                    android:background="@drawable/bg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y38"/>

                <TextView
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginLeft="@dimen/x10"
                    android:textSize="13sp"
                    android:textColor="@color/color_202020"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/dialog_minute"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/color_white"
                    android:background="@drawable/bg_time"
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/y38"/>

                <TextView
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginLeft="@dimen/x10"
                    android:textSize="13sp"
                    android:textColor="@color/color_202020"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/dialog_second"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/color_white"
                    android:background="@drawable/bg_time"
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/y38"/>

            </LinearLayout>

        </RelativeLayout>

        <!--新手指导-->
        <RelativeLayout
            android:onClick="@{listener.onClick}"
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/guide_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/status_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_B3000000"
                android:orientation="vertical"/>

            <RelativeLayout
                android:layout_below="@id/status_bar"
                android:background="@color/color_B3000000"
                android:id="@+id/next_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:onClick="@{listener.onClick}"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/y64"
                    android:layout_alignParentRight="true"
                    android:id="@+id/guide_dismiss1"
                    android:src="@mipmap/guide_home1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:onClick="@{listener.onClick}"
                    android:layout_marginRight="@dimen/x45"
                    android:layout_marginLeft="@dimen/x45"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:id="@+id/guide_image1"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/guide_home2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/guide_head1"
                    android:layout_marginTop="-80dp"
                    android:layout_below="@id/guide_image1"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/guide_head"
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/y300"/>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_below="@id/status_bar"
                android:id="@+id/next_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/guide_image2"
                    android:scaleType="fitXY"
                    android:src="@mipmap/guide_home3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:onClick="@{listener.onClick}"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/y64"
                    android:layout_alignParentRight="true"
                    android:id="@+id/guide_dismiss2"
                    android:src="@mipmap/guide_home1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/guide_head2"
                    android:layout_marginTop="@dimen/y490"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/guide_head"
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/y300"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/status_bar"
                android:visibility="gone"
                android:id="@+id/next_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/guide_image3"
                    android:scaleType="fitXY"
                    android:src="@mipmap/guide_home4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:onClick="@{listener.onClick}"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/y64"
                    android:layout_alignParentRight="true"
                    android:id="@+id/guide_dismiss3"
                    android:src="@mipmap/guide_home1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:onClick="@{listener.onClick}"
                    android:id="@+id/guide_ok"
                    android:layout_marginRight="@dimen/x175"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/y403"
                    android:layout_alignParentBottom="true"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="我知道了"
                    android:textColor="@color/color_white"
                    android:background="@drawable/bg_index"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/y80"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>
