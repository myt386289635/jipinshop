<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.home.MainActivity">

    <com.example.administrator.jipinshop.view.viewpager.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_above="@id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.TabLayout
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIndicatorHeight="0dp"
        app:tabBackground="@color/transparent"
        android:background="@color/color_white"
        android:id="@+id/tab_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_above="@id/tab_layout"
        android:background="@color/color_F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"/>

    <RelativeLayout
        android:id="@+id/login_background"
        android:background="#7D000000"
        android:layout_above="@id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80">

        <TextView
            android:id="@+id/login_go"
            android:gravity="center"
            android:minHeight="@dimen/y52"
            android:paddingRight="@dimen/x15"
            android:paddingLeft="@dimen/x15"
            android:paddingBottom="@dimen/y6"
            android:paddingTop="@dimen/y6"
            android:textSize="14sp"
            android:text="立即登录"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_free_dialog2"
            android:layout_marginRight="@dimen/x25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="@dimen/x25"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:text="首单全免资格即将过期"
            android:id="@+id/login_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/x14"
            android:layout_toRightOf="@id/login_notice"
            android:layout_centerVertical="true"
            android:id="@+id/login_timeContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:minWidth="@dimen/x38"
                android:id="@+id/dialog_hour"
                android:textSize="13sp"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/color_white"
                android:background="@drawable/bg_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y38"/>

            <TextView
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="13sp"
                android:textColor="@color/color_202020"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dialog_minute"
                android:textSize="13sp"
                android:gravity="center"
                android:text="30"
                android:textColor="@color/color_white"
                android:background="@drawable/bg_time"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/y38"/>

            <TextView
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="13sp"
                android:textColor="@color/color_202020"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dialog_second"
                android:textSize="13sp"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/color_white"
                android:background="@drawable/bg_time"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/y38"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>