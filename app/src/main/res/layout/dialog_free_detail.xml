<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dialog_container"
    android:background="@mipmap/dialog_free1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_marginBottom="@dimen/y60"
        android:gravity="center"
        tools:text="确认参加将支付50极币，不支持退币哦，祝您好运！"
        android:lineSpacingExtra="@dimen/y6"
        android:textSize="17sp"
        android:textColor="@color/color_5A5A5A"
        android:id="@+id/dialog_title"
        android:layout_marginTop="@dimen/y86"
        android:layout_marginRight="@dimen/x70"
        android:layout_marginLeft="@dimen/x70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="@color/color_ACACAC"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_title"
        tools:text="现有极币：50个"
        android:id="@+id/dialog_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:layout_marginBottom="@dimen/y42"
        android:layout_marginTop="@dimen/y5"
        android:textSize="14sp"
        android:textColor="@color/color_ACACAC"
        android:layout_alignLeft="@+id/dialog_content1"
        android:layout_below="@+id/dialog_content1"
        tools:text="所需极币：150个"
        android:id="@+id/dialog_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/dialog_bottomContainer"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginBottom="@dimen/y40"
        android:layout_below="@+id/dialog_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/dialog_cancle"
            android:gravity="center"
            android:text="暂不参与"
            android:textStyle="bold"
            android:textColor="@color/color_5A5A5A"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x34"
            android:background="@drawable/bg_sreach"
            android:layout_width="0dp"
            android:layout_height="@dimen/y110"/>


        <TextView
            android:id="@+id/dialog_sure"
            android:gravity="center"
            android:text="确认参与"
            android:textStyle="bold"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:layout_weight="1"
            android:background="@drawable/bg_free_dialog2"
            android:layout_width="0dp"
            android:layout_height="@dimen/y110"/>

    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:layout_marginBottom="@dimen/y40"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_content2"
        android:id="@+id/dialog_goto"
        android:gravity="center"
        android:text="去赚取极币"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:textSize="18sp"
        android:background="@drawable/bg_free_dialog2"
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/y110"/>


    <ImageView
        android:visibility="gone"
        android:id="@+id/dialog_diss"
        android:layout_marginTop="@dimen/y34"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/dialog_free_diss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>