<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"/>

        <include
            android:layout_below="@id/status_bar"
            android:id="@+id/in_clude"
            layout="@layout/aa_title2"
            bind:listener="@{listener}"
            android:layout_height="@dimen/y88"
            android:layout_width="match_parent"/>

        <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
            android:layout_below="@id/in_clude"
            android:id="@+id/swipeToLoad"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.administrator.jipinshop.view.textview.CustomRefreshHeadView
                android:id="@+id/swipe_refresh_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"/>

            <LinearLayout
                android:id="@+id/swipe_target"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:visibility="gone"
                    android:background="@color/color_EA4F17"
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


                <include
                    android:id="@+id/net_clude"
                    layout="@layout/common_net_error"
                    android:visibility="gone"/>


            </LinearLayout>

        </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>

        <ImageView
            android:visibility="gone"
            android:onClick="@{listener.onClick}"
            android:layout_alignTop="@id/status_bar"
            android:layout_alignBottom="@id/in_clude"
            android:background="#cc000000"
            android:id="@+id/bg_guide1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/bg_guide2"
            android:orientation="vertical"
            android:layout_below="@id/bg_guide1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:onClick="@{listener.onClick}"
                android:id="@+id/bg_guide3"
                android:background="#cc000000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y700"/>

            <ImageView
                android:onClick="@{listener.onClick}"
                android:id="@+id/bg_guide4"
                android:layout_below="@id/bg_guide3"
                android:layout_marginTop="@dimen/y280"
                android:background="#cc000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_marginTop="@dimen/y60"
                android:layout_alignTop="@id/bg_guide4"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/shop_guide3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginBottom="@dimen/y20"
                android:layout_alignBottom="@id/bg_guide3"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/newpeople_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</layout>
