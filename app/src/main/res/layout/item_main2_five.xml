<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginTop="@dimen/y30"
            android:drawablePadding="@dimen/x5"
            android:drawableLeft="@mipmap/home_today"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/color_565252"
            android:text="今日推荐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="@dimen/y6"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginLeft="@dimen/x50"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/item_tb"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_tb_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/color_E25838"
                    android:text="淘宝"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/item_tb_dec"
                    android:textColor="@color/color_E25838"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/y8"
                    android:text="精选宝贝"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_gravity="center_vertical"
                android:background="@color/color_D8D8D8"
                android:layout_width="@dimen/x2"
                android:layout_height="@dimen/y37"/>

            <LinearLayout
                android:id="@+id/item_jd"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_jd_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/color_565252"
                    android:text="京东"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/item_jd_dec"
                    android:textColor="@color/color_9D9D9D"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/y8"
                    android:text="件件必抢"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_gravity="center_vertical"
                android:background="@color/color_D8D8D8"
                android:layout_width="@dimen/x2"
                android:layout_height="@dimen/y37"/>

            <LinearLayout
                android:id="@+id/item_pdd"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_pdd_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/color_565252"
                    android:text="拼多多"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/item_pdd_dec"
                    android:textColor="@color/color_9D9D9D"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/y8"
                    android:text="实惠好货"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
