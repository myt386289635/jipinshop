<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginTop="@dimen/y30"
            android:drawablePadding="@dimen/x5"
            android:drawableLeft="@mipmap/home_today"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/color_565252"
            android:text="今日推荐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="@dimen/y6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80">

            <LinearLayout
                android:id="@+id/item_tb"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:id="@+id/item_tb_title"
                    android:textSize="16sp"
                    android:textColor="@color/color_E25838"
                    android:text="淘宝"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_like"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/item_like_title"
                    android:textColor="@color/color_565252"
                    android:text="猜你喜欢"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_mc"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/item_mc_title"
                    android:textColor="@color/color_565252"
                    android:text="猫超"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_jd"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/item_jd_title"
                    android:textColor="@color/color_565252"
                    android:text="京东"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_pdd"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/item_pdd_title"
                    android:textColor="@color/color_565252"
                    android:text="拼多多"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
