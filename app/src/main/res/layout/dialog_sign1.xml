<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/x600"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dialog_bg"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/sign_bg6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/dialog_dismiss"
            android:layout_marginTop="@dimen/y74"
            android:layout_below="@+id/dialog_bg"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignBottom="@+id/dialog_bg"
            android:id="@+id/dialog_content"
            android:textStyle="bold"
            android:textColor="@color/color_FEFFB3"
            android:layout_marginBottom="@dimen/y200"
            android:textSize="21sp"
            android:layout_centerHorizontal="true"
            android:text="恭喜你，获得0极币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>