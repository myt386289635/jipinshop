<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical"
        android:layout_width="@dimen/x630"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginTop="@dimen/y53"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_202020"
            android:text="免单提示"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dialog_time"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_565252"
            android:textSize="15sp"
            android:text="您需在一小时内前往淘宝APP购买"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dialog_actualPrice"
            android:layout_marginTop="@dimen/y30"
            android:layout_below="@id/dialog_time"
            android:layout_centerHorizontal="true"
            android:text="购买价格¥198"
            android:textColor="@color/color_565252"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dialog_feePrice"
            android:layout_marginTop="@dimen/y30"
            android:layout_below="@id/dialog_actualPrice"
            android:layout_centerHorizontal="true"
            android:text="补贴¥198"
            android:textColor="@color/color_565252"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginBottom="@dimen/y25"
            android:layout_marginTop="@dimen/y50"
            android:layout_below="@id/dialog_feePrice"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_cancle"
                android:gravity="center"
                android:textColor="@color/color_9D9D9D"
                android:textSize="16sp"
                android:text="再看看"
                android:background="@drawable/bg_d8d8d8"
                android:layout_marginRight="@dimen/x30"
                android:layout_width="@dimen/x230"
                android:layout_height="@dimen/y80"/>

            <TextView
                android:textStyle="bold"
                android:id="@+id/dialog_sure"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="16sp"
                android:text="去购买"
                android:background="@drawable/bg_free_dialog2"
                android:layout_width="@dimen/x230"
                android:layout_height="@dimen/y80"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>