<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/bg_sign2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y406"/>

        <LinearLayout
            android:background="@color/transparent"
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <RelativeLayout
            android:layout_below="@+id/status_bar"
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88">

            <ImageView
                android:tint="@color/color_white"
                android:id="@+id/title_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:src="@mipmap/nav_black_big"/>

            <TextView
                android:gravity="center"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/x24"
                android:maxLines="1"
                android:id="@+id/title_tv"
                android:layout_width="@dimen/x420"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="赚钱"/>

            <TextView
                android:gravity="center"
                android:paddingLeft="@dimen/x28"
                android:id="@+id/sign_detail"
                android:paddingRight="@dimen/x28"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:text="极币明细"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y88"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_codeContainer"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@+id/title_container"
            android:layout_marginTop="@dimen/y10"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_white"
                android:textSize="12sp"
                android:text="极币数量："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_code"
                android:textStyle="bold"
                android:textColor="@color/color_white"
                android:textSize="33sp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_notice"
            android:textColor="@color/color_white"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/item_codeContainer"
            android:text="100极币=1元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_rule"
            android:paddingBottom="@dimen/y6"
            android:paddingTop="@dimen/y6"
            android:paddingRight="@dimen/x18"
            android:paddingLeft="@dimen/x18"
            android:layout_marginRight="@dimen/x23"
            android:layout_marginTop="@dimen/y118"
            android:layout_below="@+id/status_bar"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:text="规则说明"
            android:background="@drawable/bg_sign3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/y34"
            android:layout_below="@+id/item_notice"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:background="@drawable/bg_sign5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/item_sign7Container"
                android:background="@drawable/bg_sign6"
                android:layout_marginRight="@dimen/x11"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/y23"
                android:orientation="vertical"
                android:layout_width="@dimen/x199"
                android:layout_height="@dimen/y323">

                <TextView
                    android:id="@+id/item_sign7Title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y19"
                    android:textColor="@color/color_white"
                    android:textSize="11sp"
                    android:text="第七天"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/item_sign7Title"
                    android:id="@+id/item_sign7"
                    android:layout_marginTop="@dimen/y15"
                    android:textColor="@color/color_white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="待签到"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/item_sign7Code"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/item_sign7"
                    android:textColor="@color/color_white"
                    android:textSize="10sp"
                    android:layout_marginTop="@dimen/y15"
                    android:text="最高可得100极币"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/item_sign7Code"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/sign_bg1"
                    android:layout_marginTop="@dimen/y50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="@dimen/x15"
                android:layout_marginLeft="@dimen/x11"
                android:layout_alignTop="@+id/item_sign7Container"
                android:layout_toLeftOf="@+id/item_sign7Container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y150">

                <RelativeLayout
                    android:background="@drawable/bg_sign6"
                    android:id="@+id/item_sign1Container"
                    android:orientation="vertical"
                    android:layout_width="@dimen/x140"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/item_sign1Title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="11sp"
                        android:text="第一天"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign1Code"
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_991B00"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="+3"
                        android:background="@mipmap/sign_bg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign1"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:text="待签到"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_sign6"
                    android:id="@+id/item_sign3Container"
                    android:orientation="vertical"
                    android:layout_width="@dimen/x140"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/item_sign3Title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="11sp"
                        android:text="第三天"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign3Code"
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_991B00"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="+3"
                        android:background="@mipmap/sign_bg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign3"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:text="待签到"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_sign6"
                    android:id="@+id/item_sign2Container"
                    android:orientation="vertical"
                    android:layout_width="@dimen/x140"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/item_sign2Title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="11sp"
                        android:text="第二天"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign2Code"
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_991B00"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="+3"
                        android:background="@mipmap/sign_bg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign2"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:text="待签到"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="@dimen/x15"
                android:layout_marginLeft="@dimen/x11"
                android:layout_alignBottom="@+id/item_sign7Container"
                android:layout_toLeftOf="@+id/item_sign7Container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y150">

                <RelativeLayout
                    android:background="@drawable/bg_sign6"
                    android:id="@+id/item_sign4Container"
                    android:orientation="vertical"
                    android:layout_width="@dimen/x140"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/item_sign4Title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="11sp"
                        android:text="第四天"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign4Code"
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_991B00"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="+3"
                        android:background="@mipmap/sign_bg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign4"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:text="待签到"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_sign6"
                    android:id="@+id/item_sign6Container"
                    android:orientation="vertical"
                    android:layout_width="@dimen/x140"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/item_sign6Title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="11sp"
                        android:text="第六天"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign6Code"
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_991B00"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="+3"
                        android:background="@mipmap/sign_bg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign6"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:text="待签到"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_sign6"
                    android:id="@+id/item_sign5Container"
                    android:orientation="vertical"
                    android:layout_width="@dimen/x140"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/item_sign5Title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="11sp"
                        android:text="第五天"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign5Code"
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_991B00"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="+3"
                        android:background="@mipmap/sign_bg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_sign5"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/y8"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:text="待签到"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/item_signNotice"
                android:layout_marginBottom="@dimen/y16"
                android:layout_marginTop="@dimen/y13"
                android:layout_below="@+id/item_sign7Container"
                android:layout_marginRight="@dimen/x11"
                android:layout_marginLeft="@dimen/x11"
                android:lineSpacingExtra="@dimen/y9"
                android:textColor="@color/color_E25838"
                android:textSize="13sp"
                android:text="连续签到7天即可获得开启宝箱，宝箱内可获得最高100极币奖励"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <TextView
                android:id="@+id/item_sign"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginTop="@dimen/y16"
                android:layout_below="@+id/item_signNotice"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:text="签到"
                android:background="@drawable/bg_sign9"
                android:layout_width="@dimen/x400"
                android:layout_height="@dimen/y78"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>
