<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/x6"
            android:layout_marginLeft="@dimen/x6"
            android:scaleType="fitXY"
            android:id="@+id/dialog_bg"
            android:src="@mipmap/new_nobuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dialog_sure"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/color_EE242C"
            android:text="免费送好友"
            android:layout_marginBottom="@dimen/y70"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/dialog_bg"
            android:background="@drawable/bg_fee97c"
            android:layout_width="@dimen/x190"
            android:layout_height="@dimen/y60"/>

        <ImageView
            android:id="@+id/dialog_cancle"
            android:layout_marginTop="@dimen/y117"
            android:layout_below="@+id/dialog_bg"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>
