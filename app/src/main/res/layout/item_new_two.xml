<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.example.administrator.jipinshop.bean.NewPeopleBean.DataBean.NewAllowanceGoodsListBean"/>
    </data>

    <RelativeLayout
        android:background="@color/color_EA4F17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/item_container"
            android:background="@drawable/bg_balance_one"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/x25"
                bind:srcRound="@{data.img}"
                android:id="@+id/item_image"
                android:layout_marginBottom="@dimen/y30"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginLeft="@dimen/x13"
                android:layout_width="@dimen/x220"
                android:layout_height="@dimen/y220"/>

            <TextView
                android:id="@+id/item_name"
                android:textColor="@color/color_202020"
                android:textSize="16sp"
                android:layout_marginRight="@dimen/x40"
                android:layout_marginTop="@dimen/y12"
                android:layout_alignTop="@id/item_image"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toRightOf="@id/item_image"
                android:text="@{data.goodsName}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="@dimen/y1"
                android:layout_alignBottom="@id/item_image"
                android:layout_toRightOf="@id/item_image"
                android:id="@+id/item_priceText"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_9D9D9D"
                android:text="新人价"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_price"
                android:layout_marginLeft="@dimen/x3"
                android:text="¥0"
                android:layout_marginBottom="@dimen/y1"
                android:layout_alignBottom="@id/item_image"
                android:layout_toRightOf="@id/item_priceText"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_E25838"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.example.administrator.jipinshop.view.textview.TextViewDel
                android:id="@+id/item_price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/item_price"
                android:layout_marginBottom="@dimen/y3"
                android:layout_toRightOf="@id/item_image"
                android:text="@{@string/new_people + data.otherPrice}"
                android:textColor="@color/color_9D9D9D"
                android:textSize="13sp"/>

            <TextView
                android:layout_alignBottom="@id/item_image"
                android:layout_marginRight="@dimen/x20"
                android:layout_alignParentRight="true"
                android:minWidth="@dimen/x150"
                android:background="@drawable/bg_tab_eva"
                android:gravity="center"
                android:paddingBottom="@dimen/y10"
                android:paddingTop="@dimen/y10"
                android:paddingRight="@dimen/x12"
                android:paddingLeft="@dimen/x12"
                android:id="@+id/item_buy"
                android:text="0 元 购"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/color_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_below="@id/item_image"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                android:background="@color/color_DEDEDE"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/y6"
                android:layout_toRightOf="@id/item_image"
                android:layout_below="@id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.administrator.jipinshop.view.SaleProgressView
                    android:id="@+id/item_progressbar"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/x250"
                    android:layout_height="@dimen/y12"
                    app:nearOverText=""
                    app:overText=""
                    app:sideColor="@color/color_F5F5F5"
                    app:startColor="@color/color_FFC2AF"
                    app:endColor="@color/color_FFC2AF"
                    app:isNeedAnim="false"/>

                <TextView
                    android:id="@+id/item_rate"
                    android:layout_marginLeft="@dimen/x13"
                    android:textColor="@color/color_9D9D9D"
                    android:textSize="10sp"
                    android:text="@{@string/free_buyed + data.count + @string/free_freePrice_end}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <ImageView
                android:layout_marginLeft="@dimen/x10"
                android:layout_alignLeft="@id/item_image"
                android:layout_alignTop="@id/item_image"
                android:src="@mipmap/bg_newpople2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>