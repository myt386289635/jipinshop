<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:background="@color/color_white"
            android:id="@+id/item_nodePeople"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginBottom="@dimen/y16"
                android:layout_marginTop="@dimen/y16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/eva_nopeople"/>

            <TextView
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/color_202020"
                android:text="您还没有关注任何人"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="@dimen/y26"
                android:lineSpacingExtra="@dimen/y6"
                android:gravity="center"
                android:layout_marginTop="@dimen/y12"
                android:text="找到你感兴趣的用户关注，每天更新的内容会出现在这里"
                android:layout_width="@dimen/x442"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:layout_below="@+id/item_nodePeople"
            android:id="@+id/item_headTag"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/y40"
            android:gravity="center"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="推"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_yuan"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y90"/>

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/color_202020"
            android:text="推荐关注的人"
            android:layout_marginLeft="@dimen/x22"
            android:layout_toRightOf="@+id/item_headTag"
            android:layout_alignTop="@+id/item_headTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="@dimen/x22"
            android:layout_toRightOf="@+id/item_headTag"
            android:layout_alignBottom="@+id/item_headTag"
            android:text="关注他们，别错过精彩内容"
            android:textColor="@color/color_9D9D9D"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.example.administrator.jipinshop.view.recyclerView.MyRecyclerView
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginTop="@dimen/y64"
            android:layout_below="@+id/item_headTag"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>

