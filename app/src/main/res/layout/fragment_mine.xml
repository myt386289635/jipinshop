<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.administrator.jipinshop.view.scrollView.MyScrollView
            android:id="@+id/scroll_View"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_F5F5F5">

                <RelativeLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/mine_background"
                        android:layout_alignBottom="@+id/mine_wallet"
                        android:layout_alignTop="@+id/status_bar"
                        android:src="@mipmap/mine_imagebg_dafult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/status_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:orientation="vertical"/>

                    <com.example.administrator.jipinshop.view.glide.CircleImageView
                        android:layout_below="@+id/status_bar"
                        android:id="@+id/mine_image"
                        android:layout_width="@dimen/x116"
                        android:layout_height="@dimen/y116"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginTop="@dimen/y85"
                        android:onClick="@{listener.onClick}"
                        android:src="@mipmap/logo"
                        app:civ_border_color="@color/color_white"
                        app:civ_border_width="@dimen/x2"/>

                    <TextView
                        android:layout_marginTop="@dimen/y8"
                        android:layout_below="@+id/status_bar"
                        android:id="@+id/mine_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/mine_image"
                        android:layout_marginLeft="@dimen/x25"
                        android:layout_toRightOf="@+id/mine_image"
                        android:drawablePadding="@dimen/x8"
                        android:drawableRight="@mipmap/right_white"
                        android:onClick="@{listener.onClick}"
                        android:text="立即登录"
                        android:textColor="@color/color_white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_marginTop="@dimen/y8"
                        android:layout_below="@+id/status_bar"
                        android:id="@+id/mine_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/mine_image"
                        android:layout_marginLeft="@dimen/x38"
                        android:layout_toRightOf="@+id/mine_image"
                        android:ellipsize="end"
                        android:maxWidth="@dimen/x300"
                        android:onClick="@{listener.onClick}"
                        android:singleLine="true"
                        android:text="游客"
                        android:textColor="@color/color_white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/y16"
                        android:id="@+id/mine_copyContainer"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x38"
                        android:layout_toRightOf="@+id/mine_image"
                        android:layout_alignBottom="@+id/mine_image"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/mine_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="邀请码：000000"
                            android:textColor="@color/color_white"
                            android:textSize="14sp"/>

                        <TextView
                            android:padding="@dimen/x6"
                            android:textSize="11sp"
                            android:gravity="center"
                            android:textColor="@color/color_202020"
                            android:text="点击复制"
                            android:background="@drawable/bg_copy"
                            android:id="@+id/mine_copy"
                            android:layout_marginLeft="@dimen/x24"
                            android:onClick="@{listener.onClick}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <TextView
                        android:visibility="gone"
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_info"
                        android:layout_marginTop="@dimen/y12"
                        android:layout_alignTop="@id/mine_image"
                        android:paddingRight="@dimen/x30"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/x12"
                        android:drawableRight="@mipmap/right_white"
                        android:text="个人主页"
                        android:textColor="@color/color_white"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/item_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/mine_image"
                        android:layout_alignRight="@+id/mine_image"
                        android:layout_marginBottom="@dimen/y6"
                        android:layout_marginRight="@dimen/y6"
                        android:src="@mipmap/grade_enterprise"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/mine_headContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mine_image"
                        android:background="@color/transparent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:onClick="@{listener.onClick}"
                            android:id="@+id/mine_allowance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="@dimen/y36"
                                android:id="@+id/mine_allowance_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_202020"
                                android:textStyle="bold"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/y6"
                                android:text="津贴余额"
                                android:textColor="@color/color_202020"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:onClick="@{listener.onClick}"
                            android:id="@+id/mine_sign"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/mine_sign_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/y36"
                                android:text="0"
                                android:textColor="@color/color_202020"
                                android:textStyle="bold"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/y6"
                                android:text="极币数"
                                android:textColor="@color/color_202020"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:onClick="@{listener.onClick}"
                            android:id="@+id/mine_favor"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="@dimen/y36"
                                android:id="@+id/mine_favorNum_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_202020"
                                android:textStyle="bold"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/y6"
                                android:text="收藏夹"
                                android:textColor="@color/color_202020"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:onClick="@{listener.onClick}"
                            android:id="@+id/mine_team"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="@dimen/y36"
                                android:id="@+id/mine_team_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_202020"
                                android:textStyle="bold"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/y6"
                                android:text="团队人数"
                                android:textColor="@color/color_202020"
                                android:textSize="12sp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:background="@drawable/bg_mine_head2"
                        android:layout_marginRight="@dimen/x30"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginTop="@dimen/y20"
                        android:id="@+id/mine_wallet"
                        android:layout_below="@id/mine_headContainer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y72"
                        android:onClick="@{listener.onClick}">

                        <TextView
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_centerVertical="true"
                            android:textColor="@color/color_FFE4C1"
                            android:text="我的返现"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/mine_walletText"
                            android:layout_marginRight="@dimen/x24"
                            android:drawablePadding="@dimen/x22"
                            android:drawableTint="@color/color_FFE4C1"
                            android:drawableRight="@mipmap/right"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/color_E25838"
                            android:textSize="12sp"
                            android:text="共省¥0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:onClick="@{listener.onClick}"
                    android:background="@drawable/bg_balance_last"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginLeft="@dimen/x30"
                    android:orientation="horizontal"
                    android:id="@+id/mine_walletBottomContainer"
                    android:layout_below="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y140">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/mine_withdrawal"
                            android:textSize="14sp"
                            android:textColor="@color/color_4B4745"
                            android:text="¥0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="@dimen/y8"
                            android:textColor="@color/color_4B4745"
                            android:textSize="12sp"
                            android:text="可提现"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_DEDEDE"
                        android:layout_width="@dimen/x1"
                        android:layout_height="@dimen/y56"/>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/mine_imminent"
                            android:textSize="14sp"
                            android:textColor="@color/color_4B4745"
                            android:text="¥0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="@dimen/y8"
                            android:textColor="@color/color_4B4745"
                            android:textSize="12sp"
                            android:text="即将到账"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_DEDEDE"
                        android:layout_width="@dimen/x1"
                        android:layout_height="@dimen/y56"/>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/mine_total"
                            android:textSize="14sp"
                            android:textColor="@color/color_4B4745"
                            android:text="¥0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="@dimen/y8"
                            android:textColor="@color/color_4B4745"
                            android:textSize="12sp"
                            android:text="累计到账"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginLeft="@dimen/x30"
                    android:id="@+id/mine_headbootomContainer"
                    android:layout_below="@+id/mine_walletBottomContainer"
                    android:background="@drawable/bg_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_follow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="@dimen/x52"
                            android:layout_height="@dimen/y52"
                            android:layout_marginTop="@dimen/y38"
                            android:src="@mipmap/mine_reward"/>

                        <TextView
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y24"
                            android:layout_marginTop="@dimen/y14"
                            android:text="任务中心"
                            android:textColor="@color/color_202020"/>
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_free"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="@dimen/x52"
                            android:layout_height="@dimen/y52"
                            android:layout_marginTop="@dimen/y38"
                            android:src="@mipmap/mine_trial"/>

                        <TextView
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y24"
                            android:layout_marginTop="@dimen/y14"
                            android:text="我的免单"
                            android:textColor="@color/color_202020"/>
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="@dimen/x52"
                            android:layout_height="@dimen/y52"
                            android:layout_marginTop="@dimen/y38"
                            android:src="@mipmap/order"/>

                        <TextView
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y24"
                            android:layout_marginTop="@dimen/y14"
                            android:text="我的订单"
                            android:textColor="@color/color_202020"/>
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_shoppingMall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="@dimen/x52"
                            android:layout_height="@dimen/y52"
                            android:layout_marginTop="@dimen/y38"
                            android:src="@mipmap/mine_shopping"/>

                        <TextView
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y24"
                            android:layout_marginTop="@dimen/y14"
                            android:text="极币商城"
                            android:textColor="@color/color_202020"/>
                    </LinearLayout>

                </LinearLayout>

                <com.example.administrator.jipinshop.view.viewpager.TouchViewPager
                    android:id="@+id/view_pager"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y188"
                    android:layout_below="@+id/mine_headbootomContainer"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginRight="@dimen/x30"/>

                <LinearLayout
                    android:layout_marginBottom="@dimen/y20"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_pager"
                    android:background="@drawable/bg_balance"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginBottom="@dimen/y18"
                        android:layout_marginTop="@dimen/y18"
                        android:layout_marginLeft="@dimen/x22"
                        android:textColor="@color/color_9D9D9D"
                        android:textSize="13sp"
                        android:text="我的工具"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="@color/color_DEDEDE"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:onClick="@{listener.onClick}"
                            android:id="@+id/mine_message"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/mine_messageImg"
                                android:scaleType="fitXY"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/message"/>

                            <TextView
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/y16"
                                android:text="消息通知"
                                android:textColor="@color/color_202020"/>
                        </LinearLayout>

                        <TextView
                            android:paddingTop="@dimen/y26"
                            android:paddingBottom="@dimen/y26"
                            android:id="@+id/mine_releaseContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/mine_release"
                            android:drawablePadding="@dimen/y16"
                            android:gravity="center"
                            android:onClick="@{listener.onClick}"
                            android:text="我的发布"
                            android:textColor="@color/color_202020"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/mine_gift"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/mine_gift"
                            android:drawablePadding="@dimen/y16"
                            android:gravity="center"
                            android:onClick="@{listener.onClick}"
                            android:paddingTop="@dimen/y26"
                            android:paddingBottom="@dimen/y26"
                            android:text="福利兑换"
                            android:textColor="@color/color_202020"
                            android:textSize="13sp"/>

                        <TextView
                            android:paddingTop="@dimen/y26"
                            android:paddingBottom="@dimen/y26"
                            android:onClick="@{listener.onClick}"
                            android:id="@+id/mine_setting"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/color_202020"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/setting"
                            android:drawablePadding="@dimen/y16"
                            android:text="设置"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/y22"
                        android:weightSum="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mine_opinion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/mine_opinion"
                            android:drawablePadding="@dimen/y16"
                            android:gravity="center"
                            android:onClick="@{listener.onClick}"
                            android:paddingTop="@dimen/y26"
                            android:paddingBottom="@dimen/y26"
                            android:text="反馈中心"
                            android:textColor="@color/color_202020"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/mine_signOther"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/mine_sign"
                            android:drawablePadding="@dimen/y16"
                            android:gravity="center"
                            android:onClick="@{listener.onClick}"
                            android:paddingTop="@dimen/y26"
                            android:paddingBottom="@dimen/y26"
                            android:text="邀请好友"
                            android:textColor="@color/color_202020"
                            android:textSize="13sp"/>

                        <TextView
                            android:paddingTop="@dimen/y26"
                            android:paddingBottom="@dimen/y26"
                            android:onClick="@{listener.onClick}"
                            android:id="@+id/mine_newpeople"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/color_202020"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/mine_newpeople"
                            android:drawablePadding="@dimen/y16"
                            android:text="新人专区"/>

                        <TextView
                            android:visibility="gone"
                            android:paddingTop="@dimen/y26"
                            android:paddingBottom="@dimen/y26"
                            android:onClick="@{listener.onClick}"
                            android:id="@+id/mine_invation"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/color_202020"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/mine_invation"
                            android:drawablePadding="@dimen/y16"
                            android:text="邀请码"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </com.example.administrator.jipinshop.view.scrollView.MyScrollView>

    </RelativeLayout>
    
</layout>
