<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F5F5F5">

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginBottom="@dimen/y106"
                    android:layout_alignBottom="@+id/mine_headbootomContainer"
                    android:layout_alignTop="@+id/status_bar"
                    android:background="@drawable/bg_mine_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/status_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:orientation="vertical"/>

                <com.example.administrator.jipinshop.view.glide.CircleImageView
                    android:layout_below="@+id/status_bar"
                    android:id="@+id/mine_image"
                    android:layout_width="@dimen/x116"
                    android:layout_height="@dimen/y116"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/y80"
                    android:onClick="@{listener.onClick}"
                    android:src="@mipmap/logo"
                    app:civ_border_color="@color/color_white"
                    app:civ_border_width="@dimen/x4"/>

                <TextView
                    android:layout_below="@+id/status_bar"
                    android:id="@+id/mine_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mine_image"
                    android:layout_marginLeft="@dimen/x38"
                    android:layout_toRightOf="@id/mine_image"
                    android:drawablePadding="@dimen/x8"
                    android:drawableRight="@mipmap/right_white"
                    android:onClick="@{listener.onClick}"
                    android:text="立即登录"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_below="@+id/status_bar"
                    android:id="@+id/mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mine_image"
                    android:layout_marginLeft="@dimen/x38"
                    android:layout_toRightOf="@id/mine_image"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/x300"
                    android:onClick="@{listener.onClick}"
                    android:singleLine="true"
                    android:text="游客"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/mine_copyContainer"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x38"
                    android:layout_toRightOf="@id/mine_image"
                    android:layout_alignBottom="@id/mine_image"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mine_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邀请码：000000"
                        android:textColor="@color/color_white"
                        android:textSize="14sp"/>

                    <TextView
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/color_white"
                        android:text="点击复制"
                        android:background="@drawable/bg_copy"
                        android:id="@+id/mine_copy"
                        android:layout_marginLeft="@dimen/x24"
                        android:onClick="@{listener.onClick}"
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/y48"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/item_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mine_image"
                    android:layout_alignRight="@id/mine_image"
                    android:layout_marginBottom="@dimen/y6"
                    android:layout_marginRight="@dimen/y6"
                    android:src="@mipmap/grade_enterprise"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/mine_headContainer"
                    android:layout_marginTop="@dimen/y16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mine_image"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_marginRight="@dimen/x28"
                    android:background="@color/transparent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_sign"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mine_sign_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y40"
                            android:text="0"
                            android:textColor="@color/color_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y40"
                            android:layout_marginTop="@dimen/y6"
                            android:text="极币数"
                            android:textColor="@color/color_white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_attention"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mine_attention_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y6"
                            android:text="关注"
                            android:textColor="@color/color_white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_fans"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mine_fans_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y6"
                            android:text="粉丝"
                            android:textColor="@color/color_white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_goodsNum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mine_goodsNum_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y6"
                            android:text="点赞"
                            android:textColor="@color/color_white"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_headbootomContainer"
                    android:layout_marginRight="@dimen/x28"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_below="@+id/mine_headContainer"
                    android:background="@drawable/bg_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_signOther"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="@dimen/x52"
                            android:layout_height="@dimen/y52"
                            android:layout_marginTop="@dimen/y38"
                            android:src="@mipmap/mine_sign"/>

                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y24"
                            android:layout_marginTop="@dimen/y14"
                            android:text="邀请领奖"
                            android:textColor="@color/color_8F8F8F"/>
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_shoppingMall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="@dimen/x52"
                            android:layout_height="@dimen/y52"
                            android:layout_marginTop="@dimen/y38"
                            android:src="@mipmap/mine_shopping"/>

                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y24"
                            android:layout_marginTop="@dimen/y14"
                            android:text="极币商城"
                            android:textColor="@color/color_8F8F8F"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_trial"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="@dimen/x52"
                            android:layout_height="@dimen/y52"
                            android:layout_marginTop="@dimen/y38"
                            android:src="@mipmap/mine_trial"/>

                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y24"
                            android:layout_marginTop="@dimen/y14"
                            android:text="我的试用"
                            android:textColor="@color/color_8F8F8F"/>
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="@dimen/x52"
                            android:layout_height="@dimen/y52"
                            android:layout_marginTop="@dimen/y38"
                            android:src="@mipmap/mine_order"/>

                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y24"
                            android:layout_marginTop="@dimen/y14"
                            android:text="我的订单"
                            android:textColor="@color/color_8F8F8F"/>
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="@{listener.onClick}"
                        android:id="@+id/mine_wallet"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="@dimen/x52"
                            android:layout_height="@dimen/y52"
                            android:layout_marginTop="@dimen/y38"
                            android:src="@mipmap/mine_wallet"/>

                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y24"
                            android:layout_marginTop="@dimen/y14"
                            android:text="我的钱包"
                            android:textColor="@color/color_8F8F8F"/>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container"
                android:layout_marginBottom="@dimen/x28"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x28"
                android:layout_marginTop="@dimen/y60"
                android:background="@drawable/bg_mine"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mine_message"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x104"
                    android:onClick="@{listener.onClick}">

                    <TextView
                        android:id="@+id/mine_messageTitle"
                        android:textColor="@color/color_8F8F8F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x32"
                        android:drawableLeft="@mipmap/message"
                        android:drawablePadding="@dimen/x18"
                        android:text="消息通知"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x32"
                        android:src="@mipmap/right_ash2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_F5F5F5"/>
                    
                    <TextView
                        android:id="@+id/mine_msgNumber"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/x12"
                        android:layout_toRightOf="@id/mine_messageTitle"
                        android:gravity="center"
                        android:textSize="8sp"
                        android:textColor="@color/color_white"
                        android:text="0"
                        android:minWidth="@dimen/x28"
                        android:minHeight="@dimen/y28"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_yuan3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <!--<RelativeLayout-->
                    <!--android:id="@+id/mine_order"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/x104"-->
                    <!--android:onClick="@{listener.onClick}">-->

                    <!--<TextView-->
                        <!--android:textColor="@color/color_8F8F8F"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginLeft="@dimen/x32"-->
                        <!--android:drawableLeft="@mipmap/order"-->
                        <!--android:drawablePadding="@dimen/x18"-->
                        <!--android:text="我的订单"/>-->

                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginRight="@dimen/x32"-->
                        <!--android:src="@mipmap/right_ash2"/>-->

                    <!--<View-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="@dimen/x2"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--android:background="@color/color_F5F5F5"/>-->

                <!--</RelativeLayout>-->

                <RelativeLayout
                    android:id="@+id/mine_follow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x104"
                    android:onClick="@{listener.onClick}">

                    <TextView
                        android:textColor="@color/color_8F8F8F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x32"
                        android:drawableLeft="@mipmap/mine_reward"
                        android:drawablePadding="@dimen/x18"
                        android:text="我要赚极币"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x32"
                        android:src="@mipmap/right_ash2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_F5F5F5"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_favor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x104"
                    android:onClick="@{listener.onClick}">

                    <TextView
                        android:textColor="@color/color_8F8F8F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x32"
                        android:drawableLeft="@mipmap/favor"
                        android:drawablePadding="@dimen/x18"
                        android:text="我的收藏"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x32"
                        android:src="@mipmap/right_ash2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_F5F5F5"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x104"
                    android:onClick="@{listener.onClick}">

                    <TextView
                        android:textColor="@color/color_8F8F8F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x32"
                        android:drawableLeft="@mipmap/mine_address"
                        android:drawablePadding="@dimen/x18"
                        android:text="收货地址"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x32"
                        android:src="@mipmap/right_ash2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_F5F5F5"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_setting"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x104"
                    android:onClick="@{listener.onClick}">

                    <TextView
                        android:textColor="@color/color_8F8F8F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x32"
                        android:drawableLeft="@mipmap/setting"
                        android:drawablePadding="@dimen/x18"
                        android:text="设置"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x32"
                        android:src="@mipmap/right_ash2"/>


                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</layout>
