<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/color_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/try_image"
        android:layout_marginLeft="@dimen/x28"
        tools:src="@color/color_E31436"
        android:layout_width="@dimen/x190"
        android:layout_height="@dimen/y170"/>

    <TextView
        android:layout_marginRight="@dimen/x28"
        android:ellipsize="end"
        android:maxLines="2"
        android:lineSpacingExtra="@dimen/y6"
        android:id="@+id/try_name"
        android:textColor="@color/color_202020"
        android:layout_marginLeft="@dimen/x18"
        android:layout_marginTop="@dimen/y6"
        android:layout_alignTop="@+id/try_image"
        android:layout_toRightOf="@+id/try_image"
        tools:text="接近“0”辐射，日本黑科技负离子电吹风机日本黑科技负离子电吹风机日本黑科技负离子电吹风机"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/x18"
        android:layout_toRightOf="@+id/try_image"
        android:id="@+id/item_tag"
        android:layout_alignBottom="@+id/try_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/try_head"
            tools:src="@color/color_202020"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"/>


        <ImageView
            android:visibility="gone"
            android:id="@+id/try_grade"
            android:layout_alignRight="@id/item_head"
            android:layout_alignBottom="@id/item_head"
            android:src="@mipmap/grade_peroson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginLeft="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/try_head"
            android:textColor="@color/color_DE151515"
            android:textSize="14sp"
            tools:text="资深编辑"
            android:id="@+id/try_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginRight="@dimen/x28"
            android:layout_alignParentRight="true"
            android:text="0阅读"
            android:layout_marginLeft="@dimen/x24"
            android:layout_centerVertical="true"
            android:textColor="@color/color_ACACAC"
            android:textSize="13sp"
            android:id="@+id/try_pv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:layout_marginBottom="@dimen/y40"
        android:layout_marginTop="@dimen/y40"
        android:layout_below="@+id/item_tag"
        android:background="@color/color_F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"/>

</RelativeLayout>