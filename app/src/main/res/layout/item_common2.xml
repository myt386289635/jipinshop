<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/color_white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_marginLeft="@dimen/x42"
        android:id="@+id/item_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg_common_sanjiao" />

    <RelativeLayout
        android:id="@+id/item_replyLayout"
        android:background="@drawable/bg_common"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/color_8F8F8F"
            android:id="@+id/item_name"
            tools:text="极品城"
            android:layout_marginTop="@dimen/x32"
            android:layout_marginLeft="@dimen/x24"
            android:maxWidth="@dimen/x200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@+id/item_name"
            android:id="@+id/item_head"
            android:layout_marginTop="@dimen/x32"
            android:layout_marginLeft="@dimen/x8"
            android:textColor="@color/color_151515"
            android:text="回复:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginBottom="@dimen/x24"
            android:id="@+id/item_content"
            android:lineSpacingExtra="@dimen/x6"
            android:layout_marginRight="@dimen/x24"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/x32"
            android:layout_toRightOf="@+id/item_head"
            android:textColor="@color/color_151515"
            tools:text="赞同楼主观点赞同楼主观点赞同楼主观点赞同楼主观点赞同楼主观点"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/item_more"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/x32"
            android:layout_marginLeft="@dimen/x24"
            android:layout_below="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="@dimen/x10"
                android:drawableRight="@mipmap/right_blue"
                android:textColor="@color/color_4A90E2"
                android:textSize="13sp"
                android:id="@+id/item_time"
                android:text="查看更多8条评论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:drawablePadding="@dimen/x10"
                android:drawableRight="@mipmap/more_down"
                android:textColor="@color/color_ACACAC"
                android:textSize="13sp"
                android:id="@+id/item_down"
                android:text="查看10条回复"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:drawablePadding="@dimen/x10"
                android:drawableRight="@mipmap/more_up"
                android:textColor="@color/color_ACACAC"
                android:textSize="13sp"
                android:id="@+id/item_up"
                android:text="收起所有回复"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>