<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <include
            android:id="@+id/in_clude"
            layout="@layout/aa_title2"
            bind:listener="@{listener}"/>


        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            style="@style/MyCustomTablayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_gravity="center_horizontal"
            app:tabBackground="@color/transparent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/color_F5F5F5"/>

        <TextView
            android:onClick="@{listener.onClick}"
            android:drawableTint="@color/color_E25838"
            android:paddingRight="@dimen/x30"
            android:drawableRight="@mipmap/news_right"
            android:paddingLeft="@dimen/x30"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="购物补贴提现说明"
            android:textColor="@color/color_E25838"
            android:id="@+id/order_explain"
            android:background="@color/color_FFDBDB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>
</layout>
