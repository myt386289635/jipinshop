<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/mine_background"
                android:layout_alignBottom="@+id/mine_wallet"
                android:layout_alignTop="@+id/status_bar"
                android:src="@mipmap/mine_imagebg_dafult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/status_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="vertical"/>

            <com.example.administrator.jipinshop.view.glide.CircleImageView
                android:layout_below="@+id/status_bar"
                android:id="@+id/mine_image"
                android:layout_width="@dimen/x116"
                android:layout_height="@dimen/y116"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y85"
                android:src="@mipmap/logo"
                app:civ_border_color="@color/color_white"
                app:civ_border_width="@dimen/x2"/>

            <TextView
                android:layout_marginTop="@dimen/y8"
                android:layout_below="@+id/status_bar"
                android:id="@+id/mine_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mine_image"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginLeft="@dimen/x25"
                android:layout_toRightOf="@+id/mine_image"
                android:drawablePadding="@dimen/x8"
                android:drawableRight="@mipmap/right_white"
                android:text="登录拿返现"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="@dimen/y8"
                android:layout_below="@+id/status_bar"
                android:id="@+id/mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mine_image"
                android:layout_marginLeft="@dimen/x38"
                android:layout_toRightOf="@+id/mine_image"
                android:ellipsize="end"
                android:maxWidth="@dimen/x300"
                android:singleLine="true"
                android:text="游客"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="@dimen/y16"
                android:id="@+id/mine_copyContainer"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x38"
                android:layout_toRightOf="@+id/mine_image"
                android:layout_alignBottom="@+id/mine_image"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mine_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请码：000000"
                    android:textColor="@color/color_white"
                    android:textSize="14sp"/>

                <TextView
                    android:padding="@dimen/x6"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/color_white"
                    android:text="复制"
                    android:background="@drawable/bg_copy"
                    android:id="@+id/mine_copy"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/mine_info"
                android:layout_marginTop="@dimen/y12"
                android:layout_alignTop="@id/mine_image"
                android:paddingRight="@dimen/x30"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/x12"
                android:drawableRight="@mipmap/right_white"
                android:text="个人主页"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/item_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mine_image"
                android:layout_alignRight="@+id/mine_image"
                android:layout_marginRight="@dimen/y6"
                android:src="@mipmap/grade_public"/>

            <RelativeLayout
                android:background="@drawable/bg_mine_head2"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y65"
                android:id="@+id/mine_wallet"
                android:layout_below="@id/mine_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_alignBottom="@id/mine_walletMoney"
                    android:layout_marginLeft="@dimen/x20"
                    android:id="@+id/mine_walletText"
                    android:textSize="11sp"
                    android:textColor="@color/color_FFE4C1"
                    android:text="可提现"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="@dimen/y24"
                    android:id="@+id/mine_walletMoney"
                    android:layout_toRightOf="@id/mine_walletText"
                    android:textColor="@color/color_FFE4C1"
                    android:textStyle="bold"
                    android:text="0元"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginBottom="@dimen/y24"
                    android:layout_marginTop="@dimen/y2"
                    android:layout_below="@id/mine_walletText"
                    android:textSize="11sp"
                    android:layout_marginLeft="@dimen/x20"
                    android:textColor="@color/color_FFE4C1"
                    android:text="每月25号可提现上月结算收益"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginRight="@dimen/x24"
                    android:drawablePadding="@dimen/x4"
                    android:drawableTint="@color/color_FFE4C1"
                    android:drawableRight="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_FFE4C1"
                    android:textSize="12sp"
                    android:text="查看收益"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:background="@drawable/bg_balance_last"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:orientation="horizontal"
            android:id="@+id/mine_walletBottomContainer"
            android:layout_below="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/mine_withdrawal"
                    android:textSize="14sp"
                    android:textColor="@color/color_4B4745"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="@dimen/y8"
                    android:textColor="@color/color_4B4745"
                    android:textSize="12sp"
                    android:text="今日预估"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_gravity="center_vertical"
                android:background="@color/color_DEDEDE"
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/y56"/>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/mine_imminent"
                    android:textSize="14sp"
                    android:textColor="@color/color_4B4745"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="@dimen/y8"
                    android:textColor="@color/color_4B4745"
                    android:textSize="12sp"
                    android:text="本月预估"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_gravity="center_vertical"
                android:background="@color/color_DEDEDE"
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/y56"/>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/mine_total"
                    android:textSize="14sp"
                    android:textColor="@color/color_4B4745"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="@dimen/y8"
                    android:textColor="@color/color_4B4745"
                    android:textSize="12sp"
                    android:text="上月预估"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>
