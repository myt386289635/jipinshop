<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@android:color/white"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y68"
        android:background="#f5f5f5"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/x30"
            android:textSize="15sp"
            android:text="取消"
            android:textColor="@color/color_DE151515" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="是否收费"
            android:textColor="@color/color_151515" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="@dimen/x30"
            android:text="确定"
            android:textSize="15sp"
            android:textColor="@color/color_4A90E2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y400"
        android:orientation="horizontal">
        <com.example.administrator.jipinshop.view.dialog.city.WheelView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y400"
            android:id="@+id/wheel_p"/>
        <com.example.administrator.jipinshop.view.dialog.city.WheelView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y400"
            android:id="@+id/wheel_c"/>
        <com.example.administrator.jipinshop.view.dialog.city.WheelView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y400"
            android:id="@+id/wheel_x"/>
    </LinearLayout>

</LinearLayout>