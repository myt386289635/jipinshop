<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/color_white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/dialog_cerame"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/color_202020"
        android:text="拍照"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"/>

    <View
        android:id="@+id/dialog_line1"
        android:layout_gravity="center"
        android:background="@color/color_E25838"
        android:layout_width="@dimen/x393"
        android:layout_height="@dimen/y4"/>

    <View
        android:visibility="gone"
        android:id="@+id/dialog_line11"
        android:background="@color/color_F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"/>

    <TextView
        android:id="@+id/dialog_pic"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/color_202020"
        android:text="相册"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"/>

    <View
        android:visibility="gone"
        android:id="@+id/dialog_line2"
        android:layout_gravity="center"
        android:background="@color/color_E25838"
        android:layout_width="@dimen/x393"
        android:layout_height="@dimen/y4"/>

    <View
        android:id="@+id/dialog_line22"
        android:background="@color/color_F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"/>

    <TextView
        android:id="@+id/dialog_diss"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/color_9D9D9D"
        android:text="取消"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"/>

</LinearLayout>