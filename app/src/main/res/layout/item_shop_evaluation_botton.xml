<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@color/color_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/detail_commonTotle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x42"
            android:drawablePadding="@dimen/x14"
            android:drawableRight="@mipmap/right"
            android:text="查看全部226条评论"
            android:textColor="@color/color_ACACAC"
            android:textSize="14sp"/>


        <View
            android:layout_marginTop="@dimen/x80"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x12"
            android:background="@color/color_F5F5F5"/>


        <RelativeLayout
            android:id="@+id/detail_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x100"
            android:layout_marginTop="@dimen/x100"
            android:background="@drawable/bg_good"
            android:orientation="vertical">


            <TextView
                android:id="@+id/detail_goodTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/x4"
                android:drawableTop="@mipmap/appreciate_big"
                android:text="128"/>


        </RelativeLayout>

    </LinearLayout>
</layout>
