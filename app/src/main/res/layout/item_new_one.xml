<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bg_free"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_newpople"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y472"/>

        <ImageView
            android:layout_marginBottom="@dimen/y184"
            android:layout_alignBottom="@id/bg_free"
            android:layout_centerHorizontal="true"
            android:id="@+id/bg_free1"
            android:src="@mipmap/bg_newpople1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/y18"
            android:layout_above="@id/bg_free1"
            android:id="@+id/free_rule"
            android:paddingBottom="@dimen/y13"
            android:paddingTop="@dimen/y16"
            android:paddingLeft="@dimen/x23"
            android:paddingRight="@dimen/x7"
            android:textSize="12sp"
            android:text="规则说明"
            android:textColor="@color/color_FFF5D6"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_e25838"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:background="@color/color_FFDEBE"
            android:layout_below="@id/bg_free"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/bg_newpople2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical"/>

        <ImageView
            android:id="@+id/item_black"
            android:layout_below="@id/status_bar"
            android:paddingTop="@dimen/y16"
            android:paddingBottom="@dimen/y16"
            android:paddingRight="@dimen/x19"
            android:paddingLeft="@dimen/x19"
            android:src="@mipmap/nav_black_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>