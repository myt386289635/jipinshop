<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@color/color_EA4F17"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y700">

        <RelativeLayout
            android:id="@+id/item_titleContainer"
            android:background="@color/color_D33C0C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y76">

            <TextView
                android:textColor="@color/color_FFF7F4"
                android:textSize="13sp"
                android:layout_marginLeft="@dimen/x20"
                android:layout_centerVertical="true"
                android:text="添加官方账号微信获取更多福利"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_copy"
                android:layout_marginRight="@dimen/x20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/y8"
                android:paddingTop="@dimen/y8"
                android:paddingRight="@dimen/x25"
                android:paddingLeft="@dimen/x25"
                android:textColor="@color/color_1B1B1B"
                android:textSize="12sp"
                android:text="复制微信"
                android:background="@drawable/bg_fff7f4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <ImageView
            android:adjustViewBounds="true"
            android:layout_below="@id/item_titleContainer"
            android:id="@+id/bg_free1"
            android:src="@mipmap/bg_newpople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/y40"
            android:layout_alignTop="@id/bg_free1"
            android:id="@+id/free_rule"
            android:paddingBottom="@dimen/y13"
            android:paddingTop="@dimen/y16"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x23"
            android:textSize="12sp"
            android:text="规则说明"
            android:textColor="@color/color_E95017"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/bg_free2"
            android:layout_marginTop="@dimen/y330"
            android:layout_alignTop="@id/bg_free1"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:src="@mipmap/bg_newpople1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/item_bottom"
            android:lineSpacingExtra="@dimen/y8"
            android:layout_below="@id/bg_free2"
            android:textSize="12sp"
            android:textColor="@color/color_FFEAE3"
            android:layout_marginRight="@dimen/x32"
            android:layout_marginLeft="@dimen/x32"
            android:text="*新人专享商品仅限从未在极品城中购买过任何商品的用户享受，仅有一次购买机会。"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>
</layout>