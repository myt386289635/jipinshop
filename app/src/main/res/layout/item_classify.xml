<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="java.util.List"/>

        <variable
            name="string"
            type="List&lt;String&gt;"/>
        
    </data>
    
    <RelativeLayout
        android:layout_marginTop="@dimen/y50"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:background="@drawable/bg_classfiy_one"
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_title"
            android:layout_marginTop="@dimen/y34"
            android:layout_marginLeft="@dimen/x26"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="电动牙刷百科"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginRight="@dimen/x18"
            android:layout_marginTop="@dimen/y10"
            android:layout_alignTop="@+id/item_title"
            android:layout_alignParentRight="true"
            android:id="@+id/item_more"
            android:drawablePadding="@dimen/x4"
            android:paddingRight="@dimen/x10"
            android:paddingLeft="@dimen/x19"
            android:paddingBottom="@dimen/y6"
            android:paddingTop="@dimen/y6"
            android:drawableRight="@mipmap/right_blue"
            android:textColor="@color/color_84B5D3"
            android:text="查看更多"
            android:background="@drawable/bg_classfiy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/item_action"
            android:layout_marginRight="@dimen/x27"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y14"
            android:layout_alignTop="@+id/item_title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/color_E25838"
            android:text="我要提问"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginRight="@dimen/x35"
            android:layout_below="@+id/item_title"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="@dimen/y30"
                android:id="@+id/item_textContent1"
                android:textColor="@color/color_white"
                android:textSize="15sp"
                android:singleLine="true"
                android:text="@{string[0]}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="@dimen/y30"
                android:id="@+id/item_textContent2"
                android:textColor="@color/color_white"
                android:textSize="15sp"
                android:singleLine="true"
                android:text="@{string[1]}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_textContent3"
                android:textColor="@color/color_white"
                android:textSize="15sp"
                android:singleLine="true"
                android:text="@{string[2]}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>
</layout>
