<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:minWidth="@dimen/x550"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dialog_background"
                android:src="@mipmap/new_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/dialog_sure"
                android:layout_marginBottom="@dimen/y40"
                android:layout_alignBottom="@id/dialog_background"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/new_people1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/dialog_background_result"
                android:src="@mipmap/new_people_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:visibility="gone"
                android:layout_marginBottom="@dimen/y90"
                android:layout_alignBottom="@id/dialog_background_result"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/new_people_result1"
                android:id="@+id/dialog_sure_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <ImageView
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/y100"
            android:id="@+id/dialog_cancle"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/h5_close"
            android:layout_width="@dimen/x55"
            android:layout_height="@dimen/y55"/>


    </LinearLayout>
</layout>
