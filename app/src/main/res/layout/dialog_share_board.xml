<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/color_white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/share_title"
        android:layout_marginTop="@dimen/y40"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_9D9D9D"
        android:text="分享至"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:visibility="gone"
        android:lineSpacingExtra="@dimen/y6"
        android:layout_gravity="center_horizontal"
        android:id="@+id/share_content"
        android:textColor="@color/color_DE151515"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginLeft="@dimen/x28"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/x24"
        android:text="如果好友通过您分享的链接完成购买，您即可获得10%的佣金，并可提现到支付宝账户。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginRight="@dimen/x40"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginBottom="@dimen/y42"
        android:layout_marginTop="@dimen/y44"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/share_wechat"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@mipmap/share_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/x12"
                android:textColor="@color/color_ACACAC"
                android:textSize="12sp"
                android:text="微信好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_pyq"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@mipmap/share_pyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/x12"
                android:textColor="@color/color_ACACAC"
                android:textSize="12sp"
                android:text="朋友圈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_weibo"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@mipmap/share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/x12"
                android:textColor="@color/color_ACACAC"
                android:textSize="12sp"
                android:text="微博"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/share_qq_friend"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@mipmap/share_qq_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/x12"
                android:textColor="@color/color_ACACAC"
                android:textSize="12sp"
                android:text="QQ好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/share_qq_space"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@mipmap/share_qq_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/x12"
                android:textColor="@color/color_ACACAC"
                android:textSize="12sp"
                android:text="QQ空间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:background="@color/color_DEDEDE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"/>

    <TextView
        android:id="@+id/share_cancle"
        android:gravity="center"
        android:textColor="@color/color_9D9D9D"
        android:textSize="16sp"
        android:text="取消"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y104"/>

</LinearLayout>


