<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

    </data>

    <LinearLayout
        android:background="@color/color_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/y20"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_565252"
            android:textSize="16sp"
            android:text="分享到"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:onClick="@{listener.onClick}"
                android:id="@+id/share_wechat"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/y198">

                <ImageView
                    android:src="@mipmap/share_wecha_other"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/y80"/>

                <TextView
                    android:layout_marginTop="@dimen/y20"
                    android:textColor="@color/color_565252"
                    android:textSize="13sp"
                    android:text="微信"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:onClick="@{listener.onClick}"
                android:id="@+id/share_pyq"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/y198">

                <ImageView
                    android:src="@mipmap/share_pyq_other"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/y80"/>

                <TextView
                    android:layout_marginTop="@dimen/y20"
                    android:textColor="@color/color_565252"
                    android:textSize="13sp"
                    android:text="朋友圈"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:onClick="@{listener.onClick}"
                android:id="@+id/share_qq"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/y198">

                <ImageView
                    android:src="@mipmap/share_qq_other"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/y80"/>

                <TextView
                    android:layout_marginTop="@dimen/y20"
                    android:textColor="@color/color_565252"
                    android:textSize="13sp"
                    android:text="QQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:onClick="@{listener.onClick}"
                android:id="@+id/share_wb"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/y198">

                <ImageView
                    android:src="@mipmap/share_weibo_other"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/y80"/>

                <TextView
                    android:layout_marginTop="@dimen/y20"
                    android:textColor="@color/color_565252"
                    android:textSize="13sp"
                    android:text="微博"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:onClick="@{listener.onClick}"
                android:id="@+id/share_pic"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/y198">

                <ImageView
                    android:src="@mipmap/share_pic_other"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/y80"/>

                <TextView
                    android:layout_marginTop="@dimen/y20"
                    android:textColor="@color/color_565252"
                    android:textSize="13sp"
                    android:text="批量存图"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</layout>