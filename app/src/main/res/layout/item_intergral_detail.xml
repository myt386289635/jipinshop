<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_name"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginTop="@dimen/x20"
        android:textColor="@color/color_DE151515"
        android:textSize="15sp"
        android:text="签到领积分"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/item_time"
        android:layout_marginTop="@dimen/x12"
        android:textSize="13sp"
        android:textColor="@color/color_ACACAC"
        android:text="2018-08-12 16:38"
        android:layout_marginLeft="@dimen/x28"
        android:layout_below="@id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginRight="@dimen/x28"
        android:layout_centerVertical="true"
        android:textColor="@color/color_E31436"
        android:id="@+id/item_code"
        android:text="+2"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:layout_alignRight="@id/item_code"
        android:layout_alignLeft="@id/item_time"
        android:layout_marginBottom="@dimen/x2"
        android:layout_marginTop="@dimen/x18"
        android:layout_below="@id/item_time"
        android:background="@color/color_F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"/>

</RelativeLayout>