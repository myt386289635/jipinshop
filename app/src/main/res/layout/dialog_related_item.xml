<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginBottom="@dimen/y24"
    android:layout_marginRight="@dimen/x28"
    android:layout_marginLeft="@dimen/x28"
    android:background="@drawable/bg_related_goods"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/item_image"
        tools:src="@color/color_D8D8D8"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginLeft="@dimen/x20"
        android:layout_width="@dimen/x214"
        android:layout_height="@dimen/y206"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_marginRight="@dimen/x10"
        tools:text="PHILIPS飞利浦钻石亮白型声波震动电动牙刷HX9362/67"
        android:layout_marginTop="@dimen/y10"
        android:layout_alignTop="@+id/item_image"
        android:layout_toRightOf="@+id/item_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_DE151515"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/item_promalContainer"
        android:layout_toRightOf="@+id/item_image"
        android:layout_marginBottom="@dimen/y10"
        android:layout_alignBottom="@+id/item_image"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/color_ACACAC"
            android:textSize="13sp"
            android:text="天猫价"
            android:id="@+id/item_promal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.example.administrator.jipinshop.view.textview.TextViewDel
            android:textColor="@color/color_ACACAC"
            android:textSize="13sp"
            android:text="¥0"
            android:id="@+id/item_priceOld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:id="@+id/item_price"
        android:layout_toRightOf="@+id/item_image"
        android:layout_above="@+id/item_promalContainer"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/color_E31436"
        android:text="¥999.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:drawablePadding="@dimen/x4"
        android:drawableRight="@mipmap/right_white"
        android:layout_marginBottom="@dimen/y20"
        android:layout_alignBottom="@+id/item_image"
        android:layout_marginRight="@dimen/x20"
        android:layout_alignParentRight="true"
        android:textSize="13sp"
        android:textStyle="bold"
        android:paddingRight="@dimen/x12"
        android:paddingLeft="@dimen/x14"
        android:paddingBottom="@dimen/y6"
        android:paddingTop="@dimen/y6"
        android:text="立即购买"
        android:textColor="@color/color_white"
        android:background="@drawable/bg_buy"
        android:id="@+id/item_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="@dimen/y20"
        android:id="@+id/item_overdue"
        android:layout_toRightOf="@+id/item_image"
        android:layout_alignBottom="@+id/item_image"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/color_E31436"
        android:text="¥999.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>