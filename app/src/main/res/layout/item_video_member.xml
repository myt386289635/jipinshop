<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="bean"
            type="com.example.administrator.jipinshop.bean.MemberNewBean.DataBean.LevelDetail7Bean.ListBeanXXX"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_image"
            bind:srcCircle="@{bean.iconUrl}"
            android:layout_marginTop="@dimen/y30"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/x72"
            android:layout_height="@dimen/y72"/>

        <TextView
            android:textColor="@color/color_202020"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/y9"
            android:id="@+id/item_name"
            android:layout_below="@id/item_image"
            android:layout_centerHorizontal="true"
            android:text="@{bean.title}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>
